# TechWayFit Licensing Management - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_PASSWORD=SecureP@ssw0rd123!
POSTGRES_DB=techway_licensing
POSTGRES_USER=licensing_user

# Redis Configuration  
REDIS_PASSWORD=RedisP@ssw0rd123!

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# JWT Configuration (if using JWT authentication)
JWT_SECRET_KEY=YourSuperSecretJWTKeyHere123456789
JWT_ISSUER=TechWayFit.Licensing
JWT_AUDIENCE=TechWayFit.Licensing.Web

# License Configuration
LICENSE_DEFAULT_VALIDITY_DAYS=365
LICENSE_GRACE_PERIOD_DAYS=30
LICENSE_KEY_SIZE=2048

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@techway.com
SMTP_FROM_NAME=TechWayFit Licensing

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/app/Logs/licensing.log
LOG_RETENTION_DAYS=30

# Security Configuration
ENABLE_HTTPS=false
COOKIE_SECURE=false
SESSION_TIMEOUT_MINUTES=30
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Monitoring Configuration (optional)
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Development/Testing Configuration
ENABLE_SWAGGER=false
ENABLE_DETAILED_ERRORS=false
SEED_TEST_DATA=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
