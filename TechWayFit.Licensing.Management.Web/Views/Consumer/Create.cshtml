@model TechWayFit.Licensing.WebUI.ViewModels.Consumer.ConsumerCreateViewModel
@{
    ViewData["Title"] = "Create Consumer";
}

<link rel="stylesheet" href="~/css/product-management.css" />

<div class="container-fluid">
    <!-- Header Section -->
    <div class="header-section">
        <div class="d-flex justify-content-between align-items-start">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-plus-circle me-2"></i>Create Consumer
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="License" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Consumer" asp-action="Index">Consumers</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create</li>
                    </ol>
                </nav>
            </div>
            <div class="header-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Consumers
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Consumer Information Form -->
            <div class="edit-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-building me-2"></i>Consumer Information
                    </h2>
                    <p class="section-description">Enter the organization and contact details for the new consumer</p>
                </div>
                
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Organization Information -->
                    <div class="form-section">
                        <h5 class="form-section-title">Organization Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OrganizationName" class="form-label">Organization Name</label>
                                    <input asp-for="OrganizationName" class="form-control" placeholder="Company or Organization Name" />
                                    <span asp-validation-for="OrganizationName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Organization is Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Primary Contact Information -->
                    <div class="form-section">
                        <h5 class="form-section-title">Primary Contact Information</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ContactPerson" class="form-label"></label>
                                    <input asp-for="ContactPerson" class="form-control" placeholder="Primary Contact Name" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ContactEmail" class="form-label"></label>
                                    <input asp-for="ContactEmail" class="form-control" type="email" placeholder="contact@example.com" />
                                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ContactPhone" class="form-label"></label>
                                    <input asp-for="ContactPhone" class="form-control" type="tel" placeholder="+1 (555) 123-4567" />
                                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Secondary Contact Information -->
                    <div class="form-section">
                        <h5 class="form-section-title">Secondary Contact Information <small class="text-muted">(Optional)</small></h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SecondaryContactPerson" class="form-label"></label>
                                    <input asp-for="SecondaryContactPerson" class="form-control" placeholder="Secondary Contact Name" />
                                    <span asp-validation-for="SecondaryContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SecondaryContactEmail" class="form-label"></label>
                                    <input asp-for="SecondaryContactEmail" class="form-control" type="email" placeholder="secondary@example.com" />
                                    <span asp-validation-for="SecondaryContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SecondaryContactPhone" class="form-label"></label>
                                    <input asp-for="SecondaryContactPhone" class="form-control" type="tel" placeholder="+1 (555) 123-4567" />
                                    <span asp-validation-for="SecondaryContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Address Information -->
                    <div class="form-section">
                        <h5 class="form-section-title">Address Information <small class="text-muted">(Optional)</small></h5>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" class="form-control" placeholder="Street Address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="City" class="form-label"></label>
                                    <input asp-for="City" class="form-control" placeholder="City" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="State" class="form-label"></label>
                                    <input asp-for="State" class="form-control" placeholder="State/Province" />
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PostalCode" class="form-label"></label>
                                    <input asp-for="PostalCode" class="form-control" placeholder="Postal Code" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Country" class="form-label"></label>
                                    <input asp-for="Country" class="form-control" placeholder="Country" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="form-section">
                        <h5 class="form-section-title">Additional Notes</h5>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Notes" class="form-label"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes or comments about the consumer"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Create Consumer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sidebar-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Getting Started
                    </h3>
                </div>
                
                <div class="help-content">
                    <div class="help-item">
                        <h6 class="help-title">
                            <i class="fas fa-check-circle text-success me-2"></i>Required Information
                        </h6>
                        <p class="help-text">Only the Organization Name is required to create a consumer. All other fields are optional.</p>
                    </div>
                    
                    <div class="help-item">
                        <h6 class="help-title">
                            <i class="fas fa-user-shield text-info me-2"></i>Contact Details
                        </h6>
                        <p class="help-text">Primary contact information will be used for license notifications and communications.</p>
                    </div>
                    
                    <div class="help-item">
                        <h6 class="help-title">
                            <i class="fas fa-map-marker-alt text-warning me-2"></i>Address Information
                        </h6>
                        <p class="help-text">Address details are optional but can be useful for geographical license restrictions.</p>
                    </div>
                </div>
            </div>

            <div class="sidebar-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-lightbulb me-2"></i>Next Steps
                    </h3>
                </div>
                
                <div class="next-steps">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <div class="step-title">Create Consumer</div>
                            <div class="step-description">Fill out the form and save</div>
                        </div>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <div class="step-title">Review Details</div>
                            <div class="step-description">Verify consumer information</div>
                        </div>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <div class="step-title">Generate License</div>
                            <div class="step-description">Create first license for the consumer</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
