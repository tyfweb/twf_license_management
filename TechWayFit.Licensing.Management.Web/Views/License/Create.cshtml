@model TechWayFit.Licensing.WebUI.Models.LicenseGenerationViewModel
@{
    ViewData["Title"] = "Create License";
    var productId = ViewBag.ProductId as string ?? "";
    var productName = ViewBag.ProductName as string ?? "";
    var availableConsumers = ViewBag.AvailableConsumers as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Create License</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="License" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Products</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Details" asp-route-id="@productId">@productName</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create License</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@productId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Product
                    </a>
                </div>
            </div>

            <!-- Product Info Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-box me-2"></i>Product: @productName
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">Creating a new license for product: <strong>@productId</strong></p>
                </div>
            </div>

            <!-- License Generation Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>License Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Generate" method="post">
                        <input type="hidden" name="ProductId" value="@productId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Consumer Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">Consumer Information</h6>
                                @if (availableConsumers.Any())
                                {
                                    <div class="mb-3">
                                        <label class="form-label">Select Existing Consumer (Optional)</label>
                                        <select class="form-select" id="existingConsumer">
                                            <option value="">-- Create New Consumer --</option>
                                            @foreach (var consumer in availableConsumers)
                                            {
                                                <option value="@consumer.Value" data-text="@consumer.Text">@consumer.Text</option>
                                            }
                                        </select>
                                        <div class="form-text">Choose an existing consumer or leave empty to create a new one</div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Consumer Details -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LicensedTo" class="form-label"></label>
                                    <input asp-for="LicensedTo" class="form-control" placeholder="Organization or Individual Name" />
                                    <span asp-validation-for="LicensedTo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContactPerson" class="form-label"></label>
                                    <input asp-for="ContactPerson" class="form-control" placeholder="Primary Contact Person" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContactEmail" class="form-label"></label>
                                    <input asp-for="ContactEmail" class="form-control" placeholder="contact@example.com" />
                                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SecondaryContactPerson" class="form-label"></label>
                                    <input asp-for="SecondaryContactPerson" class="form-control" placeholder="Secondary Contact (Optional)" />
                                    <span asp-validation-for="SecondaryContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SecondaryContactEmail" class="form-label"></label>
                                    <input asp-for="SecondaryContactEmail" class="form-control" placeholder="secondary@example.com" />
                                    <span asp-validation-for="SecondaryContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- License Details -->
                        <h6 class="text-primary mb-3">License Configuration</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="ValidFrom" class="form-label"></label>
                                    <input asp-for="ValidFrom" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidFrom" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="ValidTo" class="form-label"></label>
                                    <input asp-for="ValidTo" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidTo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Tier" class="form-label"></label>
                                    <select asp-for="Tier" class="form-select" asp-items="Html.GetEnumSelectList<TechWayFit.Licensing.Core.Models.LicenseTier>()">
                                        <option value="">Select License Tier</option>
                                    </select>
                                    <span asp-validation-for="Tier" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Features Selection -->
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Features</h6>
                            <div class="row">
                                @foreach (var feature in Model.AvailableFeatures)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="SelectedFeatures" value="@feature.Key" 
                                                   id="feature_@feature.Key" @(Model.SelectedFeatures.Contains(feature.Key) ? "checked" : "") />
                                            <label class="form-check-label" for="feature_@feature.Key">
                                                <strong>@feature.Value.Name</strong>
                                                <br />
                                                <small class="text-muted">@feature.Value.Description</small>
                                                <br />
                                                <span class="badge bg-@(feature.Value.MinimumTier == TechWayFit.Licensing.Core.Models.LicenseTier.Community ? "success" : 
                                                                         feature.Value.MinimumTier == TechWayFit.Licensing.Core.Models.LicenseTier.Professional ? "warning" : "danger")">
                                                    @feature.Value.MinimumTier
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@productId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Generate License
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        document.getElementById('existingConsumer').addEventListener('change', function() {
            const selectedValue = this.value;
            if (selectedValue) {
                // Auto-fill fields based on selected consumer if needed
                // For now, just show that a consumer is selected
                const selectedText = this.options[this.selectedIndex].text;
                document.getElementById('@Html.IdFor(m => m.LicensedTo)').value = selectedText.split(' (')[0];
                document.getElementById('@Html.IdFor(m => m.ContactPerson)').value = selectedText.match(/\((.+)\)/)?.[1] || '';
            }
        });

        // Set datetime-local format for date inputs
        const now = new Date();
        const oneYearFromNow = new Date(now.getFullYear() + 1, now.getMonth(), now.getDate());
        
        function formatDateTimeLocal(date) {
            return date.getFullYear() + '-' + 
                   String(date.getMonth() + 1).padStart(2, '0') + '-' + 
                   String(date.getDate()).padStart(2, '0') + 'T' + 
                   String(date.getHours()).padStart(2, '0') + ':' + 
                   String(date.getMinutes()).padStart(2, '0');
        }

        // Set default values if not already set
        const validFromInput = document.getElementById('@Html.IdFor(m => m.ValidFrom)');
        const validToInput = document.getElementById('@Html.IdFor(m => m.ValidTo)');
        
        if (!validFromInput.value) {
            validFromInput.value = formatDateTimeLocal(now);
        }
        if (!validToInput.value) {
            validToInput.value = formatDateTimeLocal(oneYearFromNow);
        }
    </script>
}
