@using TechWayFit.Licensing.Core.Models
@model TechWayFit.Licensing.WebUI.ViewModels.Dashboard.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Overview";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-management.css" />
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Dashboard Overview</h2>
                <p class="text-muted mb-0">Welcome back! Here's what's happening with your licenses.</p>
            </div>
            <a href="@Url.Action("Create", "License")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New License
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Statistics Overview -->
            <div class="edit-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-chart-bar me-2"></i>License Statistics</h5>
                </div>
                <div class="section-content">
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value">@(Model?.TotalLicenses ?? 0)</div>
                            <div class="stat-label">Total Licenses</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-success">@(Model?.ActiveLicenses ?? 0)</div>
                            <div class="stat-label">Active Licenses</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-warning">@(Model?.ExpiringLicenses ?? 0)</div>
                            <div class="stat-label">Expiring Soon</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-info">@(Model?.TotalConsumers ?? 0)</div>
                            <div class="stat-label">Consumers</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent License Activity -->
            <div class="edit-section mb-4">
                <div class="section-header">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <h5><i class="fas fa-clock me-2"></i>Recent License Activity</h5>
                        <a href="@Url.Action("Index", "License")" class="btn btn-sm btn-outline-primary">
                            View All
                        </a>
                    </div>
                </div>
                <div class="section-content">
                    @if (Model?.RecentLicenses?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>License ID</th>
                                        <th>Consumer</th>
                                        <th>Product</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Expires</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var license in Model.RecentLicenses.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <code class="small">@license.LicenseId.Substring(0, 8)...</code>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-semibold">@license.ConsumerName</div>
                                                    <small class="text-muted">@license.ContactEmail</small>
                                                </div>
                                            </td>
                                            <td>@license.ConsumerName</td>
                                            <td>
                                                @{
                                                    var statusBadge = license.Status switch
                                                    {
                                                        LicenseStatus.Active => "bg-success",
                                                        LicenseStatus.Expired => "bg-danger",
                                                        LicenseStatus.Suspended => "bg-warning",
                                                        LicenseStatus.GracePeriod => "bg-warning",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusBadge">@license.Status</span>
                                            </td>
                                            <td>@license.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @{
                                                    var expiryClass = license.DaysUntilExpiry <= 0 ? "text-danger" :
                                                                    license.DaysUntilExpiry <= 30 ? "text-warning" : "";
                                                }
                                                <span class="@expiryClass">
                                                    @if (license.DaysUntilExpiry <= 0)
                                                    {
                                                        <span>Expired</span>
                                                    }
                                                    else if (license.DaysUntilExpiry <= 30)
                                                    {
                                                        <span>@license.DaysUntilExpiry days</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@license.ValidTo.ToString("MMM dd, yyyy")</span>
                                                    }
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <a href="@Url.Action("Details", "License", new { id = license.LicenseId })" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       data-bs-toggle="tooltip" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (license.CanRenew)
                                                    {
                                                        <button class="btn btn-sm btn-outline-success"
                                                                data-bs-toggle="tooltip" title="Renew License"
                                                                onclick="renewLicense('@license.LicenseId')">
                                                            <i class="fas fa-redo"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No recent license activity found</h6>
                            <p class="text-muted mb-3">Get started by creating your first license</p>
                            <a href="@Url.Action("Create", "License")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Your First License
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="sidebar-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="section-content">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", "License")" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Generate New License
                        </a>
                        <a href="@Url.Action("Validate", "License")" class="btn btn-outline-primary">
                            <i class="fas fa-check-circle me-2"></i>Validate License
                        </a>
                        <a href="@Url.Action("Index", "Consumer")" class="btn btn-outline-secondary">
                            <i class="fas fa-users me-2"></i>Manage Consumers
                        </a>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">
                            <i class="fas fa-box me-2"></i>Manage Products
                        </a>
                    </div>
                </div>
            </div>

            <!-- System Health -->
            <div class="sidebar-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-heartbeat me-2"></i>System Health</h5>
                </div>
                <div class="section-content">
                    <div class="health-status-item mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="health-label">License Generation</span>
                            <span class="badge bg-success">Operational</span>
                        </div>
                        <div class="progress" style="height: 4px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                    <div class="health-status-item mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="health-label">Validation Service</span>
                            <span class="badge bg-success">Operational</span>
                        </div>
                        <div class="progress" style="height: 4px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                    <div class="health-status-item mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="health-label">Database</span>
                            <span class="badge bg-success">Operational</span>
                        </div>
                        <div class="progress" style="height: 4px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>Last updated: <span id="last-updated">@DateTime.Now.ToString("HH:mm:ss")</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function renewLicense(licenseId) {
            if (confirm('Are you sure you want to renew this license?')) {
                window.location.href = '@Url.Action("Create", "License")?renew=' + licenseId;
            }
        }

        // Auto-refresh timestamp every 30 seconds
        setInterval(function() {
            const timestampElement = document.getElementById('last-updated');
            if (timestampElement) {
                timestampElement.textContent = new Date().toLocaleTimeString();
            }
        }, 30000);

        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
