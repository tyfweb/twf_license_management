@{
    ViewData["Title"] = "Dashboard - TechWayFit License Management";
}

<!-- Hero Section -->
<section class="hero-section jumbotron bg-primary text-white text-center py-5 mb-0">
    <div class="container hero-content">
        <div class="jumbotron-content">
            <h1 class="display-4 mb-3">
                <i class="fas fa-shield-alt me-3"></i>
                TechWayFit License Management
            </h1>
            <p class="lead mb-4">
                Comprehensive license generation, validation, and management system
            </p>
            <div class="progress-indicator"></div>
            <p class="mb-0">
                <i class="fas fa-rocket me-2"></i>
                Step-by-step implementation in progress...
            </p>
        </div>
    </div>
</section>

<!-- Main Dashboard Content -->
<div class="container-fluid py-5">
    <!-- Implementation Steps Overview -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4 text-gradient-primary">Implementation Roadmap</h2>
        </div>
        
        <!-- Step Cards Grid -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card completed h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h5 class="card-title">Step 1: Foundation</h5>
                    <p class="card-text">Clean build and project structure</p>
                    <span class="badge bg-success">‚úÖ Completed</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card @(ViewBag.IsAuthenticated ? "completed" : "in-progress") h-100">
                <div class="card-body text-center">
                    <div class="step-icon @(ViewBag.IsAuthenticated ? "text-success" : "text-warning")">
                        <i class="fas fa-@(ViewBag.IsAuthenticated ? "check-circle" : "user-shield")"></i>
                    </div>
                    <h5 class="card-title">Step 2: Authentication</h5>
                    <p class="card-text">User login and access control</p>
                    @if (ViewBag.IsAuthenticated)
                    {
                        <span class="badge bg-success">‚úÖ Completed</span>
                        <div class="mt-2">
                            <small class="text-success">
                                <strong>@ViewBag.Username</strong> (@ViewBag.UserRole)
                            </small>
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-warning">üîÑ Available</span>
                        <div class="mt-2">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card completed h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h5 class="card-title">Step 3: Products</h5>
                    <p class="card-text">Product, tiers, features & versions</p>
                    <span class="badge bg-success">‚úÖ Completed</span>
                    <div class="mt-2">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-outline-success">
                            <i class="fas fa-box me-1"></i> Manage Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card pending h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-muted">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="card-title">Step 4: Consumers</h5>
                    <p class="card-text">Customer and client management</p>
                    <span class="badge bg-secondary">‚è≥ Coming Soon</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card pending h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-muted">
                        <i class="fas fa-certificate"></i>
                    </div>
                    <h5 class="card-title">Step 5: Licenses</h5>
                    <p class="card-text">License generation and management</p>
                    <span class="badge bg-secondary">‚è≥ Coming Soon</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card pending h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-muted">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h5 class="card-title">Step 6: Audit</h5>
                    <p class="card-text">Audit trails and logging</p>
                    <span class="badge bg-secondary">‚è≥ Coming Soon</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card step-card pending h-100">
                <div class="card-body text-center">
                    <div class="step-icon text-muted">
                        <i class="fas fa-bell"></i>
                    </div>
                    <h5 class="card-title">Step 7: Notifications</h5>
                    <p class="card-text">Alerts and communication</p>
                    <span class="badge bg-secondary">‚è≥ Coming Soon</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Progress Section -->
    <div class="row">
        <!-- Step 1 Details -->
        <div class="col-12 mb-4">
            <div class="card status-card-completed shadow-medium">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Step 1: Clean Build Foundation
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-success mb-3">
                        <strong>‚úÖ COMPLETED:</strong> All controllers have been backed up and minimal infrastructure is in place.
                        The system builds successfully and is ready for step-by-step implementation.
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Controllers backed up to Controllers/Backup/</li>
                                <li><i class="fas fa-check text-success me-2"></i>Minimal HomeController created</li>
                                <li><i class="fas fa-check text-success me-2"></i>Service registrations simplified</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Legacy Extensions removed</li>
                                <li><i class="fas fa-check text-success me-2"></i>Project references added</li>
                                <li><i class="fas fa-check text-success me-2"></i><strong>Clean build achieved</strong></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 2 Details -->
        <div class="col-12 mb-4">
            <div class="card @(ViewBag.IsAuthenticated ? "status-card-completed" : "status-card-in-progress") shadow-medium">
                <div class="card-header">
                    <h5 class="mb-0">
                        @if (ViewBag.IsAuthenticated)
                        {
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span class="text-success">Step 2: Authentication System</span>
                        }
                        else
                        {
                            <i class="fas fa-clock text-warning me-2"></i>
                            <span class="text-warning">Step 2: Authentication System</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsAuthenticated)
                    {
                        <p class="text-success mb-3">
                            <strong>‚úÖ COMPLETED:</strong> User authentication is working successfully.
                            Welcome, <strong>@ViewBag.Username</strong>!
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Cookie-based authentication configured</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Login/logout functionality implemented</li>
                                    <li><i class="fas fa-check text-success me-2"></i>User roles and authorization working</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Authentication UI integrated</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Demo users available</li>
                                    <li><i class="fas fa-user-check text-success me-2"></i><strong>Logged in as: @ViewBag.Username (@ViewBag.UserRole)</strong></li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-warning mb-3">
                            <strong>üîÑ AVAILABLE:</strong> Authentication system is ready. Please log in to test the functionality.
                        </p>
                        <div class="row">
                            <div class="col-md-8">
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Login page available at <a href="@Url.Action("Login", "Account")" class="text-primary">/Account/Login</a></li>
                                    <li><i class="fas fa-key text-info me-2"></i>Demo credentials: <code>admin/admin123</code> (Administrator)</li>
                                    <li><i class="fas fa-key text-info me-2"></i>Demo credentials: <code>manager/manager123</code> (Manager)</li>
                                </ul>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login Now
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
