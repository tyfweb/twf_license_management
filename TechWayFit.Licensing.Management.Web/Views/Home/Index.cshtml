@{
    ViewData["Title"] = "TechWayFit License Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white text-center py-5 mb-4">
                <h1 class="display-4">🔐 TechWayFit License Management</h1>
                <p class="lead">Comprehensive license generation, validation, and management system</p>
                <hr class="my-4 bg-white">
                <p>Step-by-step implementation in progress...</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">👤 Step 2: Authentication</h5>
                    <p class="card-text">User login and access control</p>
                    @if (ViewBag.IsAuthenticated)
                    {
                        <span class="badge bg-success">✅ Completed</span>
                        <div class="mt-2">
                            <small class="text-success">
                                Logged in as: <strong>@ViewBag.Username</strong><br>
                                Role: <strong>@ViewBag.UserRole</strong>
                            </small>
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-primary">Available</span>
                        <div class="mt-2">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">📦 Step 3: Products</h5>
                    <p class="card-text">Product, tiers, features & versions</p>
                    <span class="badge badge-warning">Coming Soon</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">👥 Step 4: Consumers</h5>
                    <p class="card-text">Customer and client management</p>
                    <span class="badge badge-warning">Coming Soon</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">🔑 Step 5: Licenses</h5>
                    <p class="card-text">License generation & validation</p>
                    <span class="badge badge-warning">Coming Soon</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">📊 Step 6: Audit</h5>
                    <p class="card-text">Audit trails and compliance reporting</p>
                    <span class="badge badge-warning">Coming Soon</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">🔔 Step 7: Notifications</h5>
                    <p class="card-text">Alerts and notification management</p>
                    <span class="badge badge-warning">Coming Soon</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>✅ Step 1: Clean Build Foundation</h5>
                </div>
                <div class="card-body">
                    <p class="text-success">
                        <strong>✅ COMPLETED:</strong> All controllers have been backed up and minimal infrastructure is in place.
                        The system builds successfully and is ready for step-by-step implementation.
                    </p>
                    <ul class="list-unstyled">
                        <li>✅ Controllers backed up to Controllers/Backup/</li>
                        <li>✅ Minimal HomeController created</li>
                        <li>✅ Service registrations simplified</li>
                        <li>✅ Legacy Extensions removed</li>
                        <li>✅ Project references added</li>
                        <li>✅ <strong>Clean build achieved</strong></li>
                        <li>✅ Clean build foundation established</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>
                        @if (ViewBag.IsAuthenticated)
                        {
                            <span class="text-success">✅ Step 2: Authentication System</span>
                        }
                        else
                        {
                            <span class="text-primary">🔄 Step 2: Authentication System</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsAuthenticated)
                    {
                        <p class="text-success">
                            <strong>✅ COMPLETED:</strong> User authentication is working successfully.
                        </p>
                        <ul class="list-unstyled">
                            <li>✅ Cookie-based authentication configured</li>
                            <li>✅ Login/logout functionality implemented</li>
                            <li>✅ User roles and authorization working</li>
                            <li>✅ Authentication UI integrated</li>
                            <li>✅ Demo users available (admin/manager)</li>
                            <li>✅ <strong>Currently logged in as: @ViewBag.Username (@ViewBag.UserRole)</strong></li>
                        </ul>
                    }
                    else
                    {
                        <p class="text-info">
                            <strong>Available:</strong> Authentication system is ready. Please log in to test the functionality.
                        </p>
                        <ul class="list-unstyled">
                            <li>✅ Login page available at <a href="@Url.Action("Login", "Account")">/Account/Login</a></li>
                            <li>✅ Demo credentials: admin/admin123 (Administrator)</li>
                            <li>✅ Demo credentials: manager/manager123 (Manager)</li>
                            <li>⏳ <strong>Action needed: Please log in to complete Step 2</strong></li>
                        </ul>
                        <div class="mt-3">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-1"></i> Login Now
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
