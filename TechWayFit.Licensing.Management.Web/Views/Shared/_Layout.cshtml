<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechWayFit License Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }
        .feature-card {
            border-left: 4px solid #007bff;
            margin-bottom: 1rem;
        }
        .tier-badge {
            font-size: 0.8rem;
        }
        .json-viewer {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            max-height: 400px;
            overflow-y: auto;
        }
        .validation-success {
            border-left: 4px solid #28a745;
        }
        .validation-error {
            border-left: 4px solid #dc3545;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-certificate me-2"></i>
                    TechWayFit License Management
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav me-auto">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- These will be enabled in future steps -->
                            <a class="nav-link disabled text-muted" href="#" title="Coming in Step 3">
                                <i class="fas fa-box me-1"></i>Products
                            </a>
                            <a class="nav-link disabled text-muted" href="#" title="Coming in Step 4">
                                <i class="fas fa-users me-1"></i>Consumers
                            </a>
                            <a class="nav-link disabled text-muted" href="#" title="Coming in Step 5">
                                <i class="fas fa-certificate me-1"></i>Licenses
                            </a>
                        }
                    </div>
                    
                    <div class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="navbar-text me-3">
                                <i class="fas fa-user me-1"></i>
                                Welcome, <strong>@User.Identity.Name</strong>
                                <small class="text-light">(@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</small>
                            </div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - TechWayFit License Generator - Internal Use Only
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
