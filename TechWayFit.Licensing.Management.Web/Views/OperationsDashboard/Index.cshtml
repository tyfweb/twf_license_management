@model TechWayFit.Licensing.Management.Web.ViewModels.OperationsDashboard.OperationsDashboardViewModel
@{
    ViewData["Title"] = "Operations Dashboard";
    Layout = "~/Views/Shared/_LicenseHubLayout.cshtml";
}

<div class="container-fluid py-3">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Header Section -->
    <div class="header mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Operations Dashboard</h2>
                <p class="text-muted mb-0">Monitor system performance, errors, and health metrics.</p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("RealTime")" class="btn btn-outline-primary">
                    <i class="fas fa-sync-alt me-1"></i>Real-time
                </a>
                <a href="@Url.Action("Performance")" class="btn btn-outline-info">
                    <i class="fas fa-chart-line me-1"></i>Performance
                </a>
                <a href="@Url.Action("Errors")" class="btn btn-outline-warning">
                    <i class="fas fa-exclamation-triangle me-1"></i>Errors
                </a>
                <a href="@Url.Action("Reports")" class="btn btn-outline-secondary">
                    <i class="fas fa-file-alt me-1"></i>Reports
                </a>
            </div>
        </div>
    </div>

    <!-- System Metrics Cards -->
    <div class="row g-2 mb-3">
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card stats-card-info">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-server"></i>
                    </div>
                                            <div class="stats-number">@(Model.SystemMetricsOverview.Any() ? Model.SystemMetricsOverview.Count().ToString() : "0")</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">System Metrics</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card stats-card-danger">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stats-number">@(Model.ErrorSummary?.Sum(e => (int?)e.OccurrenceCount) ?? 0)</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Error Reports</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card stats-card-warning">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stats-number">@(Model.PerformanceMetrics?.Count() ?? 0)</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Performance Metrics</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card @(Model.CurrentHealth?.OverallHealthStatus == "Healthy" ? "stats-card-success" : "stats-card-danger")">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <div class="stats-number">@(Model.CurrentHealth?.OverallHealthStatus ?? "Unknown")</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">System Health</div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- System Health Status -->
    @if (Model.CurrentHealth != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="sidebar-section">
                    <div class="section-header">
                        <h5><i class="fas fa-heartbeat me-2"></i>System Health Status</h5>
                    </div>
                    <div class="section-content">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <div class="h4 mb-2 text-@(Model.CurrentHealth.OverallHealthStatus == "Healthy" ? "success" : Model.CurrentHealth.OverallHealthStatus == "Warning" ? "warning" : "danger")">
                                        @Model.CurrentHealth.OverallHealthStatus
                                    </div>
                                    <div class="fw-bold">Overall Status</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <div class="h4 mb-2 text-info">@Model.CurrentHealth.TotalRequestsLastHour.ToString("N0")</div>
                                    <div class="fw-bold">Total Requests</div>
                                    <small class="text-muted">Last Hour</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <div class="h4 mb-2 @(Model.CurrentHealth.TotalErrorsLastHour > 0 ? "text-danger" : "text-success")">
                                        @Model.CurrentHealth.TotalErrorsLastHour.ToString("N0")
                                    </div>
                                    <div class="fw-bold">Errors</div>
                                    <small class="text-muted">Last Hour</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <div class="h4 mb-2 text-info">@Model.CurrentHealth.AvgResponseTimeMs ms</div>
                                    <div class="fw-bold">Avg Response Time</div>
                                    <small class="text-muted">Current</small>
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.CurrentHealth.CpuUsagePercent.HasValue || Model.CurrentHealth.MemoryUsageMb.HasValue)
                        {
                            <div class="row g-3 mt-2">
                                @if (Model.CurrentHealth.CpuUsagePercent.HasValue)
                                {
                                    <div class="col-md-4">
                                        <div class="text-center p-3 border rounded">
                                            <div class="h5 mb-2 text-primary">@Model.CurrentHealth.CpuUsagePercent.Value.ToString("F1")%</div>
                                            <div class="fw-bold">CPU Usage</div>
                                        </div>
                                    </div>
                                }
                                @if (Model.CurrentHealth.MemoryUsageMb.HasValue)
                                {
                                    <div class="col-md-4">
                                        <div class="text-center p-3 border rounded">
                                            <div class="h5 mb-2 text-primary">@Model.CurrentHealth.MemoryUsageMb.Value.ToString("F1") MB</div>
                                            <div class="fw-bold">Memory Usage</div>
                                        </div>
                                    </div>
                                }
                                @if (Model.CurrentHealth.ActiveDbConnections.HasValue)
                                {
                                    <div class="col-md-4">
                                        <div class="text-center p-3 border rounded">
                                            <div class="h5 mb-2 text-primary">@Model.CurrentHealth.ActiveDbConnections.Value</div>
                                            <div class="fw-bold">DB Connections</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Performance and Error Metrics -->
    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="sidebar-section">
                <div class="section-header">
                    <h5><i class="fas fa-chart-bar me-2"></i>Performance Metrics</h5>
                </div>
                <div class="section-content">
                    @if (Model.PerformanceMetrics.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Endpoint</th>
                                        <th>Avg Time</th>
                                        <th>Requests</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var metric in Model.PerformanceMetrics.Take(5))
                                    {
                                        <tr>
                                            <td>@metric.Controller/@metric.Action</td>
                                            <td>@metric.AvgResponseTimeMs ms</td>
                                            <td>@metric.RequestCount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-2">
                            <a href="@Url.Action("Performance")" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-chart-line me-1"></i>View All Performance Data
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <i class="fas fa-chart-bar fa-2x mb-2"></i>
                            <p>No performance metrics available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="sidebar-section">
                <div class="section-header">
                    <h5><i class="fas fa-exclamation-triangle me-2"></i>Recent Errors</h5>
                </div>
                <div class="section-content">
                    @if (Model.ErrorSummary.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Error Type</th>
                                        <th>Count</th>
                                        <th>Last Occurrence</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var error in Model.ErrorSummary.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge @(error.SeverityLevel == "High" ? "bg-danger" : error.SeverityLevel == "Medium" ? "bg-warning" : "bg-info")">
                                                    @error.ErrorType
                                                </span>
                                            </td>
                                            <td>@error.OccurrenceCount</td>
                                            <td>@error.LastOccurrence.ToString("MMM dd HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-2">
                            <a href="@Url.Action("Errors")" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-exclamation-triangle me-1"></i>View All Errors
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-success">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <p>No errors detected</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="sidebar-section">
                <div class="section-header">
                    <h5><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="section-content">
                    <div class="d-flex gap-1 flex-wrap">
                        <a href="@Url.Action("SystemMetrics")" class="btn btn-outline-primary flex-fill">
                            <i class="fas fa-server me-1"></i><span class="d-none d-lg-inline">System </span>Metrics
                        </a>
                        <a href="@Url.Action("ErrorLogs")" class="btn btn-outline-warning flex-fill">
                            <i class="fas fa-bug me-1"></i><span class="d-none d-lg-inline">Error </span>Logs
                        </a>
                        <a href="@Url.Action("PagePerformance")" class="btn btn-outline-info flex-fill">
                            <i class="fas fa-tachometer-alt me-1"></i><span class="d-none d-lg-inline">Page </span>Performance
                        </a>
                        <a href="@Url.Action("QueryPerformance")" class="btn btn-outline-success flex-fill">
                            <i class="fas fa-database me-1"></i><span class="d-none d-lg-inline">Query </span>Performance
                        </a>
                        <a href="@Url.Action("SystemHealth")" class="btn btn-outline-secondary flex-fill">
                            <i class="fas fa-heartbeat me-1"></i><span class="d-none d-lg-inline">System </span>Health
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Navigation Grid -->
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center">
                    <div class="h2 text-info mb-3">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <h5 class="card-title">Real-time Monitoring</h5>
                    <p class="card-text text-muted">Monitor live system performance and metrics in real-time.</p>
                    <a href="@Url.Action("RealTime")" class="btn btn-info">
                        <i class="fas fa-sync-alt me-1"></i>View Real-time
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center">
                    <div class="h2 text-warning mb-3">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h5 class="card-title">Performance Analysis</h5>
                    <p class="card-text text-muted">Analyze system and application performance trends.</p>
                    <a href="@Url.Action("Performance")" class="btn btn-warning">
                        <i class="fas fa-chart-line me-1"></i>View Performance
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center">
                    <div class="h2 text-danger mb-3">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h5 class="card-title">Error Management</h5>
                    <p class="card-text text-muted">Track, analyze, and resolve system errors and issues.</p>
                    <a href="@Url.Action("Errors")" class="btn btn-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>View Errors
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Hover effect for cards
        document.addEventListener('DOMContentLoaded', function() {
            const hoverCards = document.querySelectorAll('.hover-card');
            hoverCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}
