@model TechWayFit.Licensing.WebUI.ViewModels.Product.ProductDetailViewModel
@{
    ViewData["Title"] = $"Product Details - {Model.Product.ProductName}";
    ViewData["Description"] = $"Detailed information for {Model.Product.ProductName}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-management.css" />
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    @Model.Product.ProductName
                    @if (Model.Product.IsActive)
                    {
                        <span class="badge bg-success ms-2">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary ms-2">Inactive</span>
                    }
                </h2>
                <p class="text-muted mb-0">
                    Product ID: @Model.Product.ProductId • Version: @Model.Product.Version • Type:
                    @Model.Product.ProductType
                </p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Edit", new { id = Model.Product.ProductId })" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Products
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <!-- Product Information -->
            <div class="edit-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Product Information</h5>
                </div>
                <div class="section-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Product ID</label>
                                <div class="detail-value">@Model.Product.ProductId</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Product Name</label>
                                <div class="detail-value">@Model.Product.ProductName</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Product Type</label>
                                <div class="detail-value">
                                    <span class="badge bg-primary">@Model.Product.ProductType</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Version</label>
                                <div class="detail-value">@Model.Product.Version</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Status</label>
                                <div class="detail-value">
                                    @if (Model.Product.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Created</label>
                                <div class="detail-value">@Model.Product.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Last Updated</label>
                                <div class="detail-value">@Model.Product.UpdatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- Metadata Section -->
            @if (Model.Product.Metadata.Any())
            {
                <div class="edit-section mb-4">
                    <div class="section-header">
                        <h5><i class="fas fa-tags me-2"></i>Metadata</h5>
                    </div>
                    <div class="section-content">
                        <div class="row">
                            @foreach (var metadata in Model.Product.Metadata)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="metadata-item">
                                        <label class="metadata-key">@metadata.Key</label>
                                        <div class="metadata-value">@metadata.Value</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
 <!-- Available Features -->
            @if (Model.Product.AvailableFeatures.Any())
            {
                <div class="edit-section mb-4">
                    <div class="section-header">
                        <h5><i class="fas fa-cogs me-2"></i>Available Features</h5>
                    </div>
                    <div class="section-content">
                        <div class="row">
                            @foreach (var feature in Model.Product.AvailableFeatures)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="feature-card">
                                        <div class="feature-header">
                                            <h6 class="feature-name">@feature.Name</h6>
                                            <span class="feature-category badge bg-info">@feature.Category</span>
                                        </div>
                                        <div class="feature-content">
                                            <p class="feature-description">@feature.Description</p>
                                            <span class="feature-tier badge bg-secondary">@feature.MinimumTier+</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
 <!-- Recent Licenses -->
            @if (Model.RecentLicenses.Any())
            {
                <div class="edit-section mb-4">
                    <div class="section-header">
                        <h5><i class="fas fa-clock me-2"></i>Recent Licenses</h5>
                    </div>
                    <div class="section-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>License ID</th>
                                        <th>Consumer</th>
                                        <th>Tier</th>
                                        <th>Status</th>
                                        <th>Valid Until</th>
                                        <th>Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var license in Model.RecentLicenses)
                                    {
                                        <tr>
                                            <td><code>@license.LicenseId</code></td>
                                            <td>@license.ConsumerName</td>
                                            <td><span class="badge bg-secondary">@license.Tier</span></td>
                                            <td>
                                                @if (license.Status == TechWayFit.Licensing.Core.Models.LicenseStatus.Active &&
                                                                                        license.ValidTo > DateTime.UtcNow)
                                                {
                                                    @if (license.IsExpiringSoon)
                                                    {
                                                        <span class="badge bg-warning">Expiring Soon</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                }
                                                else if (license.ValidTo < DateTime.UtcNow)
                                                {
                                                    <span class="badge bg-danger">Expired</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@license.Status</span>
                                                }
                                            </td>
                                            <td>@license.ValidTo.ToString("MMM dd, yyyy")</td>
                                            <td>@license.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- License Breakdown -->
            <div class="edit-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-pie-chart me-2"></i>License Breakdown</h5>
                </div>
                <div class="section-content">
                    <div class="license-breakdown">
                        <div class="breakdown-item">
                            <div class="breakdown-label">Active</div>
                            <div class="breakdown-value badge bg-success">@Model.Statistics.ActiveLicenses</div>
                        </div>
                        <div class="breakdown-item">
                            <div class="breakdown-label">Expiring Soon</div>
                            <div class="breakdown-value badge bg-warning">@Model.Statistics.LicensesExpiringSoon</div>
                        </div>
                        <div class="breakdown-item">
                            <div class="breakdown-label">Expired</div>
                            <div class="breakdown-value badge bg-danger">@Model.Statistics.ExpiredLicenses</div>
                        </div>
                        <div class="breakdown-item">
                            <div class="breakdown-label">Suspended</div>
                            <div class="breakdown-value badge bg-secondary">@Model.Statistics.SuspendedLicenses</div>
                        </div>
                    </div>

                    @if (Model.Statistics.LicensesByTier.Any())
                    {
                        <div class="tier-breakdown">
                            <h6 class="mb-3">By Tier</h6>
                            <div class="license-breakdown">
                                @foreach (var tierStat in Model.Statistics.LicensesByTier.OrderBy(x => x.Key))
                                {
                                    <div class="breakdown-item">
                                        <div class="breakdown-label">@tierStat.Key</div>
                                        <div class="breakdown-value badge bg-info">@tierStat.Value</div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="sidebar-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="section-content">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.Product.ProductId })" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Product
                        </a>
                        <a asp-controller="License" asp-action="Create" asp-route-productId="@Model.Product.ProductId"
                            class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Generate License
                        </a>
                        <a asp-controller="Consumer" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-users me-2"></i>Manage Consumers
                        </a>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Delete Product
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="sidebar-section mb-4">
                <div class="section-header">
                    <h5><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
                </div>
                <div class="section-content">
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value">@Model.Consumers.Count</div>
                            <div class="stat-label">Consumers</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@Model.Statistics.TotalLicenses</div>
                            <div class="stat-label">Total Licenses</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@Model.Statistics.ActiveLicenses</div>
                            <div class="stat-label">Active Licenses</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@Model.Product.AvailableFeatures.Count</div>
                            <div class="stat-label">Available Features</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the product <strong>@Model.Product.ProductName</strong>?</p>
                <p class="text-danger">
                    <i class="fas fa-warning me-1"></i>
                    This action cannot be undone and will remove all associated license tiers and features.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Product.ProductId" method="post"
                    style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Product
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>