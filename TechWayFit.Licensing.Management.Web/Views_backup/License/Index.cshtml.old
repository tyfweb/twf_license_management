@model TechWayFit.Licensing.WebUI.ViewModels.Dashboard.DashboardViewModel
@{
    ViewData["Title"] = "License Management Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-certificate text-primary me-2"></i>
                        License Management Portal
                    </h2>
                    <p class="text-muted mb-0">Welcome, @(User?.Identity?.Name ?? "User") - Manage all your licensing needs</p>
                </div>
                <div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-box me-2"></i>
                        Products Overview
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Products.Any())
                    {
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                <div class="col-lg-4 col-md-6 mb-3">
                                    <div class="card h-100 border-0 shadow-sm product-card" data-product-id="@product.ProductId">
                                        <div class="card-header @(product.IsActive ? "bg-success text-white" : "bg-secondary text-white")">
                                            <h6 class="mb-0">
                                                <i class="fas fa-cube me-1"></i>
                                                @product.Name
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text small">@product.Description</p>
                                            <div class="row text-center small">
                                                <div class="col-4">
                                                    <div class="bg-light p-2 rounded">
                                                        <strong>@product.ConsumerCount</strong>
                                                        <br>Consumers
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="bg-light p-2 rounded">
                                                        <strong>@product.LicenseCount</strong>
                                                        <br>Licenses
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="bg-light p-2 rounded">
                                                        <strong>@product.ExpiringLicenses</strong>
                                                        <br>Expiring
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <button class="btn btn-outline-primary btn-sm w-100" onclick="viewProductLicenses('@product.ProductId', '@product.Name')">
                                                <i class="fas fa-eye me-1"></i>
                                                View Licenses
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Products Found</h5>
                            <p class="text-muted">Create your first product to get started with licensing.</p>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Add Product
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Management Actions Row -->
    <div class="row mb-4">
        <!-- License Generation -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-header bg-primary text-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Generate License
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-muted">Create new licenses for products and consumers.</p>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-check text-success me-1"></i> Product-specific licensing</li>
                        <li><i class="fas fa-check text-success me-1"></i> Feature management</li>
                        <li><i class="fas fa-check text-success me-1"></i> Tier-based controls</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <button type="button" class="btn btn-primary w-100" onclick="showLicenseGeneration()">
                        <i class="fas fa-certificate me-1"></i>
                        Generate New License
                    </button>
                </div>
            </div>
        </div>

        <!-- Product Management -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-header bg-success text-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-box me-2"></i>
                        Product Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-muted">Manage products, features, and configurations.</p>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-check text-success me-1"></i> Product configuration</li>
                        <li><i class="fas fa-check text-success me-1"></i> Feature definitions</li>
                        <li><i class="fas fa-check text-success me-1"></i> Key management</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-success w-100">
                        <i class="fas fa-cogs me-1"></i>
                        Manage Products
                    </a>
                </div>
            </div>
        </div>

        <!-- Consumer Management -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-header bg-info text-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>
                        Consumer Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-muted">Manage license consumers and organizations.</p>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-check text-success me-1"></i> Organization profiles</li>
                        <li><i class="fas fa-check text-success me-1"></i> Contact management</li>
                        <li><i class="fas fa-check text-success me-1"></i> License history</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Index", "Consumer")" class="btn btn-info w-100">
                        <i class="fas fa-users me-1"></i>
                        Manage Consumers
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Licenses Modal -->
    <div class="modal fade" id="productLicensesModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-certificate me-2"></i>
                        <span id="productLicensesTitle">Product Licenses</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="productLicensesContent">
                    <!-- Content will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="showLicenseGeneration()">
                        <i class="fas fa-plus me-1"></i>
                        Generate License
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- License Generation Form (Hidden by default) -->
    <div id="licenseGenerationSection" style="display: none;">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-certificate me-2"></i>
                    Generate New License
                    <button type="button" class="btn btn-outline-light btn-sm float-end" onclick="hideLicenseGeneration()">
                        <i class="fas fa-times"></i>
                    </button>
                </h5>
            </div>
            <div class="card-body">
                <form asp-controller="License" asp-action="Generate" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.LicensedTo" class="form-label">Licensed To *</label>
                                <input asp-for="LicenseGenerationModel.LicensedTo" class="form-control" placeholder="e.g., Acme Corporation" required />
                                <span asp-validation-for="LicenseGenerationModel.LicensedTo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.Tier" class="form-label">License Tier *</label>
                                <select asp-for="LicenseGenerationModel.Tier" class="form-select" id="tierSelect" required>
                                    <option value="0">Community (Free)</option>
                                    <option value="1">Professional</option>
                                    <option value="2">Enterprise</option>
                                </select>
                                <span asp-validation-for="LicenseGenerationModel.Tier" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.ContactPerson" class="form-label">Contact Person *</label>
                                <input asp-for="LicenseGenerationModel.ContactPerson" class="form-control" placeholder="e.g., John Smith" required />
                                <span asp-validation-for="LicenseGenerationModel.ContactPerson" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.ContactEmail" class="form-label">Contact Email *</label>
                                <input asp-for="LicenseGenerationModel.ContactEmail" class="form-control" type="email" placeholder="e.g., john@company.com" required />
                                <span asp-validation-for="LicenseGenerationModel.ContactEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.ValidFrom" class="form-label">Valid From *</label>
                                <input asp-for="LicenseGenerationModel.ValidFrom" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="LicenseGenerationModel.ValidFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LicenseGenerationModel.ValidTo" class="form-label">Valid To *</label>
                                <input asp-for="LicenseGenerationModel.ValidTo" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="LicenseGenerationModel.ValidTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-certificate me-2"></i>
                            Generate License
                        </button>
                        <button type="button" class="btn btn-secondary btn-lg ms-2" onclick="hideLicenseGeneration()">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function viewProductLicenses(productId, productName) {
            $('#productLicensesTitle').text(productName + ' - Licenses');
            
            // Show loading state
            $('#productLicensesContent').html(`
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading licenses for ${productName}...</p>
                </div>
            `);
            
            // Show modal
            $('#productLicensesModal').modal('show');
            
            // Load product licenses via AJAX
            fetch(`/ProductLicense/GetProductLicenses?productId=${encodeURIComponent(productId)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        let content = `
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-users me-1"></i> Consumers (${data.consumers.length})</h6>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-certificate me-1"></i> Licenses</h6>
                                </div>
                            </div>
                        `;
                        
                        if (data.consumers.length > 0) {
                            data.consumers.forEach(consumer => {
                                const activeLicenses = consumer.licenses.filter(l => l.isActive && !l.isExpired).length;
                                const expiredLicenses = consumer.licenses.filter(l => l.isExpired).length;
                                
                                content += `
                                    <div class="card mb-2">
                                        <div class="card-header">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">${consumer.consumer.organizationName}</h6>
                                                <div>
                                                    <span class="badge bg-success">${activeLicenses} Active</span>
                                                    ${expiredLicenses > 0 ? `<span class="badge bg-danger ms-1">${expiredLicenses} Expired</span>` : ''}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <p class="small text-muted mb-2">Contact: ${consumer.consumer.primaryContactPerson} (${consumer.consumer.primaryContactEmail})</p>
                                `;
                                
                                if (consumer.licenses.length > 0) {
                                    content += '<div class="row">';
                                    consumer.licenses.forEach(license => {
                                        const statusClass = license.isExpired ? 'bg-danger' : (license.isActive ? 'bg-success' : 'bg-secondary');
                                        const statusText = license.isExpired ? 'Expired' : (license.isActive ? 'Active' : 'Inactive');
                                        
                                        content += `
                                            <div class="col-md-6 mb-2">
                                                <div class="small border rounded p-2">
                                                    <div class="d-flex justify-content-between">
                                                        <strong>${license.tier}</strong>
                                                        <span class="badge ${statusClass}">${statusText}</span>
                                                    </div>
                                                    <div class="text-muted">
                                                        Valid: ${new Date(license.validFrom).toLocaleDateString()} - ${new Date(license.validTo).toLocaleDateString()}
                                                    </div>
                                                    <div class="mt-2">
                                                        <a href="/License/Details/${license.licenseId}" class="btn btn-outline-primary btn-sm">
                                                            <i class="fas fa-eye me-1"></i>View Details
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        `;
                                    });
                                    content += '</div>';
                                } else {
                                    content += '<p class="text-muted small">No licenses found for this consumer.</p>';
                                }
                                
                                content += '</div></div>';
                            });
                        } else {
                            content += `
                                <div class="text-center py-4">
                                    <i class="fas fa-users fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">No consumers found for this product.</p>
                                    <a href="/Consumer" class="btn btn-outline-primary btn-sm">Add Consumer</a>
                                </div>
                            `;
                        }
                        
                        $('#productLicensesContent').html(content);
                    } else {
                        $('#productLicensesContent').html(`
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                ${data.message || 'Failed to load product licenses'}
                            </div>
                        `);
                    }
                })
                .catch(error => {
                    $('#productLicensesContent').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Error loading product licenses. Please try again.
                        </div>
                    `);
                });
        }
        
        function showLicenseGeneration() {
            // Hide modal if open
            $('#productLicensesModal').modal('hide');
            
            // Show license generation form
            $('#licenseGenerationSection').show();
            $('html, body').animate({
                scrollTop: $('#licenseGenerationSection').offset().top - 100
            }, 500);
        }
        
        function hideLicenseGeneration() {
            $('#licenseGenerationSection').hide();
        }
        
        // Add hover effects
        $('.product-card').hover(
            function() { $(this).addClass('border-primary'); },
            function() { $(this).removeClass('border-primary'); }
        );
        
        $('.hover-card').hover(
            function() { $(this).css('transform', 'translateY(-2px)'); },
            function() { $(this).css('transform', 'translateY(0)'); }
        );
    </script>
    
    <style>
        .product-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .hover-card {
            transition: all 0.3s ease;
        }
        
        .card {
            border-radius: 10px;
        }
    </style>
}
