@model TechWayFit.Licensing.Management.Web.Models.Authentication.LoginViewModel
@{
    ViewData["Title"] = "Login - LicenseHub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/licensehub.css" asp-append-version="true" />
    
    <!-- Theme Support -->
    <style>
        :root {
            --login-bg-color: #2D3748;
            --login-brand-color: #1a202c;
            --login-icon-color: #2D3748;
            --login-btn-bg: #2D3748;
            --login-btn-border: #2D3748;
            --login-demo-color: #2D3748;
        }
        
        [data-theme="dark"] {
            --login-bg-color: #1a1a1a;
            --login-brand-color: #e2e8f0;
            --login-icon-color: #4a5568;
            --login-btn-bg: #4a5568;
            --login-btn-border: #4a5568;
            --login-demo-color: #4a5568;
        }
        
        [data-theme="blue"] {
            --login-bg-color: #1e3a8a;
            --login-brand-color: #1e40af;
            --login-icon-color: #1e40af;
            --login-btn-bg: #1e40af;
            --login-btn-border: #1e40af;
            --login-demo-color: #1e40af;
        }
        
        [data-theme="green"] {
            --login-bg-color: #166534;
            --login-brand-color: #15803d;
            --login-icon-color: #15803d;
            --login-btn-bg: #15803d;
            --login-btn-border: #15803d;
            --login-demo-color: #15803d;
        }
        
        [data-theme="purple"] {
            --login-bg-color: #6b21a8;
            --login-brand-color: #7c3aed;
            --login-icon-color: #7c3aed;
            --login-btn-bg: #7c3aed;
            --login-btn-border: #7c3aed;
            --login-demo-color: #7c3aed;
        }
    </style>
</head>
<body class="bg-dark" style="background: var(--login-bg-color); min-height: 100vh;">
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <!-- Background Pattern -->
        <div class="position-absolute top-0 start-0 w-100 h-100" style="z-index: 1; opacity: 0.1;">
            <div class="licensehub-pattern-overlay"></div>
        </div>

        <!-- Login Form -->
        <div class="row justify-content-center w-100" style="z-index: 2; position: relative;">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0" style="border-radius: 16px;">
                    <div class="card-body p-4 p-md-5">
                        <!-- Logo and Header -->
                        <div class="row align-items-center mb-4">
                            <div class="col-auto">
                                <div class="bg-light rounded-3 p-3 shadow-sm" style="width: 80px; height: 80px;">
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-shield-alt fs-1" style="color: var(--login-icon-color);"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <h1 class="fw-bold mb-1" style="color: var(--login-brand-color); font-size: 2.25rem; letter-spacing: -0.025em;">LicenseHub</h1>
                                <p class="text-muted mb-0">Secure License Management System</p>
                            </div>
                        </div>

                        <!-- Login Form -->
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <!-- Error Messages -->
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div asp-validation-summary="All" class="alert alert-danger d-flex align-items-center" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <span>Please correct the errors below.</span>
                                </div>
                            }

                            <input type="hidden" asp-for="ReturnUrl" />

                            <!-- Username Field -->
                            <div class="row mb-3">
                                <label asp-for="Username" class="col-sm-3 col-form-label fw-semibold text-dark">
                                    <i class="fas fa-user me-1"></i>Username
                                </label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-user text-muted"></i>
                                        </span>
                                        <input asp-for="Username" 
                                               class="form-control border-start-0" 
                                               placeholder="Enter your username" 
                                               required 
                                               autocomplete="username">
                                    </div>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="row mb-3">
                                <label asp-for="Password" class="col-sm-3 col-form-label fw-semibold text-dark">
                                    <i class="fas fa-lock me-1"></i>Password
                                </label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Password" 
                                               type="password" 
                                               class="form-control border-start-0" 
                                               placeholder="Enter your password" 
                                               required 
                                               autocomplete="current-password">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Remember Me -->
                            <div class="row mb-4">
                                <div class="col-sm-9 offset-sm-3">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                        <label asp-for="RememberMe" class="form-check-label">
                                            <i class="fas fa-clock me-1"></i>Remember me for 8 hours
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold" style="background-color: var(--login-btn-bg); border-color: var(--login-btn-border);">
                                        <i class="fas fa-sign-in-alt me-2"></i>
                                        <span>Sign In Securely</span>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Demo Credentials -->
                        <div class="mt-4 p-3 bg-light border rounded">
                            <div class="text-center mb-3">
                                <h6 class="text-dark fw-semibold mb-0">
                                    <i class="fas fa-key me-2" style="color: var(--login-demo-color);"></i>Demo Credentials
                                </h6>
                            </div>
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <div class="card border cursor-pointer licensehub-demo-card" style="transition: all 0.2s ease;">
                                        <div class="card-body text-center p-2">
                                            <div class="fw-bold text-uppercase small mb-1" style="color: var(--login-demo-color); font-size: 0.75rem; letter-spacing: 0.5px;">Administrator</div>
                                            <div class="licensehub-demo-username font-monospace small bg-light p-1 rounded mb-1">admin</div>
                                            <div class="licensehub-demo-password font-monospace small bg-light p-1 rounded">Admin@123</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border cursor-pointer licensehub-demo-card" style="transition: all 0.2s ease;">
                                        <div class="card-body text-center p-2">
                                            <div class="fw-bold text-uppercase small mb-1" style="color: var(--login-demo-color); font-size: 0.75rem; letter-spacing: 0.5px;">Manager</div>
                                            <div class="licensehub-demo-username font-monospace small bg-light p-1 rounded mb-1">manager</div>
                                            <div class="licensehub-demo-password font-monospace small bg-light p-1 rounded">Manager@123</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="mt-3 p-2 bg-primary bg-opacity-10 border border-primary border-opacity-25 rounded text-center">
                            <small class="text-primary fw-medium">
                                <i class="fas fa-shield-alt me-1"></i>
                                Your connection is secured with industry-standard encryption
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom CSS for Bootstrap Enhancement -->
    <style>
        .cursor-pointer {
            cursor: pointer;
        }
        
        .licensehub-demo-card:hover {
            border-color: #2D3748 !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(45, 55, 72, 0.15) !important;
        }
        
        .btn-primary:hover {
            background-color: #1A202C !important;
            border-color: #1A202C !important;
            transform: translateY(-1px);
        }
        
        .form-control:focus,
        .form-check-input:focus {
            border-color: #2D3748;
            box-shadow: 0 0 0 0.2rem rgba(45, 55, 72, 0.25);
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }
        
        .form-control {
            border-color: #dee2e6;
        }
        
        .form-control:focus + .input-group-text,
        .input-group-text + .form-control:focus {
            border-color: #2D3748;
        }
    </style>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Enhanced form validation and UX
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const submitBtn = form.querySelector('button[type="submit"]');

            // Form submission enhancement
            form.addEventListener('submit', function (event) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i><span>Signing In...</span>';
                submitBtn.disabled = true;
            });

            // Demo credential click handlers
            document.querySelectorAll('.licensehub-demo-card').forEach(card => {
                card.addEventListener('click', function () {
                    const username = this.querySelector('.licensehub-demo-username').textContent;
                    const password = this.querySelector('.licensehub-demo-password').textContent;
                    
                    document.querySelector('input[name="Username"]').value = username;
                    document.querySelector('input[name="Password"]').value = password;
                    
                    // Add visual feedback
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 150);
                });
            });
        });

        // Handle validation summary display
        $(document).ready(function () {
            // Only show alert if there are actual error messages
            var hasErrors = @Html.Raw(ViewData.ModelState.IsValid ? "false" : "true");
            if (hasErrors && $('.alert-danger').length > 0) {
                $('.alert-danger').show();
            }
        });
    </script>
</body>
</html>
