@model TechWayFit.Licensing.Management.Web.ViewModels.Product.ProductLicenseViewModel
@{
    ViewData["Title"] = $"Licenses for {Model.Product.ProductName}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Product Licenses</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="License" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.Product.ProductName</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <!-- Product Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-box-open me-2"></i>@Model.Product.ProductName
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">Product Type: @Model.Product.ProductType</p>
                            <p><strong>Version:</strong> @Model.Product.Version</p>
                        </div>
                        <div class="col-md-4">
                            <div class="text-end">
                                <div class="d-inline-block">
                                    <span class="badge bg-primary fs-6">@Model.Consumers.Count Consumer(s)</span>
                                    <span class="badge bg-success fs-6">@Model.Consumers.Sum(c => c.Licenses.Count) License(s)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Consumer Licenses -->
            @if (Model.Consumers.Any())
            {
                <div class="row">
                    @foreach (var consumerData in Model.Consumers)
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="card-title mb-1">
                                        <i class="fas fa-building me-2"></i>@consumerData.Consumer.OrganizationName
                                    </h6>
                                    <small class="text-muted">Consumer ID: @consumerData.Consumer.ConsumerId</small>
                                </div>
                                <div class="card-body">
                                    @if (consumerData.Licenses.Any())
                                    {
                                        <div class="mb-3">
                                            <small class="text-muted">License Summary:</small>
                                            <div class="d-flex gap-2 mt-1">
                                                @{
                                                    var activeLicenses = consumerData.Licenses.Count(l => l.Status == TechWayFit.Licensing.Core.Models.LicenseStatus.Active && l.ValidTo > DateTime.UtcNow);
                                                    var expiredLicenses = consumerData.Licenses.Count(l => l.ValidTo < DateTime.UtcNow);
                                                    var expiringLicenses = consumerData.Licenses.Count(l => l.Status == TechWayFit.Licensing.Core.Models.LicenseStatus.Active && l.ValidTo <= DateTime.UtcNow.AddDays(30) && l.ValidTo > DateTime.UtcNow);
                                                }
                                                <span class="badge bg-success">@activeLicenses Active</span>
                                                @if (expiringLicenses > 0)
                                                {
                                                    <span class="badge bg-warning">@expiringLicenses Expiring</span>
                                                }
                                                @if (expiredLicenses > 0)
                                                {
                                                    <span class="badge bg-danger">@expiredLicenses Expired</span>
                                                }
                                            </div>
                                        </div>

                                        <div class="license-list">
                                            @foreach (var license in consumerData.Licenses.OrderByDescending(l => l.CreatedAt))
                                            {
                                                var isActive = license.Status == TechWayFit.Licensing.Core.Models.LicenseStatus.Active && license.ValidTo > DateTime.UtcNow;
                                                var isExpiring = isActive && license.ValidTo <= DateTime.UtcNow.AddDays(30);
                                                var isExpired = license.ValidTo < DateTime.UtcNow;

                                                <div class="border rounded p-2 mb-2 @(isActive ? (isExpiring ? "border-warning" : "border-success") : "border-danger")">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <small class="text-muted">License ID:</small>
                                                            <div class="font-monospace small">@license.LicenseId</div>
                                                            
                                                            <small class="text-muted">Tier:</small>
                                                            <div>
                                                                <span class="badge bg-secondary">@license.Tier</span>
                                                            </div>
                                                            
                                                            <small class="text-muted">Valid Period:</small>
                                                            <div class="small">
                                                                @license.ValidFrom.ToString("MMM dd, yyyy") - @license.ValidTo.ToString("MMM dd, yyyy")
                                                            </div>
                                                        </div>
                                                        <div class="text-end">
                                                            @if (isActive)
                                                            {
                                                                @if (isExpiring)
                                                                {
                                                                    <span class="badge bg-warning">Expiring Soon</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-success">Active</span>
                                                                }
                                                            }
                                                            else if (isExpired)
                                                            {
                                                                <span class="badge bg-danger">Expired</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-secondary">@license.Status</span>
                                                            }
                                                        </div>
                                                    </div>
                                                    
                                                    @if (!string.IsNullOrEmpty(license.FilePath))
                                                    {
                                                        <div class="mt-2 pt-2 border-top">
                                                            <button class="btn btn-sm btn-outline-primary" onclick="downloadLicense('@license.LicenseId')">
                                                                <i class="fas fa-download me-1"></i>Download
                                                            </button>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted py-3">
                                            <i class="fas fa-file-alt fa-2x mb-2"></i>
                                            <p>No licenses found for this consumer</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            Contact: @consumerData.Consumer.ContactPerson
                                        </small>
                                        <a href="mailto:@consumerData.Consumer.ContactEmail" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-envelope"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5>No Consumers Found</h5>
                        <p class="text-muted">No consumers are currently associated with this product.</p>
                        <a asp-controller="Consumer" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Consumers
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadLicense(licenseId) {
            // Redirect to license download with default .lic format
            window.location.href = '@Url.Action("Download", "License")/' + licenseId;
        }
    </script>
}
