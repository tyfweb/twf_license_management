<!-- Sticky Top Bar -->
<div class="licensehub-topbar sticky-top" style="z-index: 1030;">
    <div class="container-fluid px-0">
        <div class="d-flex align-items-center justify-content-between py-2 px-4">
            <!-- Left side - Brand/Logo -->
            <div class="d-flex align-items-center">
                <h4 class="text-white mb-0 fw-bold d-flex align-items-center">
                    <i class="fas fa-shield-alt me-2 text-white"></i>
                    <span class="d-none d-sm-inline text-white">LicenseHub</span>
                </h4>
            </div>

            <!-- Center - Font Accessibility Controls -->
            <div class="flex-fill d-flex justify-content-center">
                <div class="d-flex align-items-center gap-2" id="fontSizeControls">
                    <span class="text-white small me-2">
                        <i class="fas fa-font me-1"></i>
                        <span class="d-none d-md-inline">Font Size:</span>
                    </span>
                    <button class="btn btn-sm text-white border-0 bg-transparent font-size-btn" 
                            data-size="small" title="Small Font">
                        <i class="fas fa-font" style="font-size: 0.8rem;"></i>
                    </button>
                    <button class="btn btn-sm text-white border-0 bg-transparent font-size-btn" 
                            data-size="normal" title="Normal Font">
                        <i class="fas fa-font" style="font-size: 1rem;"></i>
                    </button>
                    <button class="btn btn-sm text-white border-0 bg-transparent font-size-btn active" 
                            data-size="large" title="Large Font">
                        <i class="fas fa-font" style="font-size: 1.2rem;"></i>
                    </button>
                    <button class="btn btn-sm text-white border-0 bg-transparent font-size-btn" 
                            data-size="extra-large" title="Extra Large Font">
                        <i class="fas fa-font" style="font-size: 1.4rem;"></i>
                    </button>
                </div>
            </div>

            <!-- Right side - User Controls -->
            <div class="d-flex align-items-center gap-3">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Tenant Switcher ViewComponent (for administrators) -->
                    @await Component.InvokeAsync("TenantSelector")

                    <!-- Simple User Profile Dropdown -->
                    <div class="dropdown">
                        <button class="btn dropdown-toggle text-white text-decoration-none p-2 border-0 bg-transparent d-flex align-items-center" 
                                type="button" 
                                id="userDropdown" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                            <i class="fas fa-user-circle me-2 text-white fs-5"></i>
                            <span class="d-none d-md-inline me-1 text-white">@User.Identity.Name</span>
                            <i class="fas fa-chevron-down small text-white"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                            <li>
                                <h6 class="dropdown-header">
                                    <i class="fas fa-user-circle me-2 text-primary"></i>
                                    @User.Identity.Name
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user me-2"></i>Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Settings" asp-action="Index">
                                    <i class="fas fa-cog me-2"></i>Settings
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Login Button for Non-authenticated Users -->
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-sm d-flex align-items-center">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        <span class="d-none d-sm-inline">Login</span>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
