<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechWayFit License Management</title>
    
    <!-- External Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Compiled SCSS CSS (includes all custom styles) -->
    <link href="~/css/compiled.css" rel="stylesheet" asp-append-version="true">
     
    <style>
        /* Enhanced typography for better cross-platform rendering */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, Roboto, "Helvetica Neue", Arial, sans-serif !important;
            font-weight: 400;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: optimizeLegibility;
        }
        
        .navbar-brand {
            font-weight: 600 !important;
            letter-spacing: -0.025em;
        }
        
        .jumbotron {
            border-radius: 0;
            position: relative;
            overflow: hidden;
        }
        
        .jumbotron::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%), 
                        linear-gradient(-45deg, rgba(255,255,255,0.1) 25%, transparent 25%), 
                        linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.1) 75%), 
                        linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.1) 75%);
            background-size: 20px 20px;
            background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
            opacity: 0.3;
        }
        
        .jumbotron-content {
            position: relative;
            z-index: 1;
        }
        
        .step-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        
        .progress-indicator {
            height: 4px;
            background: linear-gradient(90deg, var(--tw-success) 0%, var(--tw-warning) 50%, var(--tw-info) 100%);
            border-radius: 2px;
            margin: 2rem 0;
        }
        
        /* Force navigation visibility */
        .navbar-dark .navbar-brand,
        .navbar-dark .navbar-nav .nav-link {
            color: white !important;
        }
        
        .navbar-dark .navbar-brand:hover,
        .navbar-dark .navbar-nav .nav-link:hover {
            color: rgba(255,255,255,0.8) !important;
        }
        
        /* Force hero section visibility */
        .hero-section,
        .hero-section h1,
        .hero-section p,
        .hero-section .lead {
            color: white !important;
        }
    </style>
    
    <!-- Theme Loading -->
    @await RenderSectionAsync("Styles", required: false)
    @await Component.InvokeAsync("ThemeLoader")
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%) !important;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-shield-alt me-2"></i>
                    <span>TechWayFit</span>
                    <small class="ms-2 opacity-75">License Management</small>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link disabled text-muted" href="#" title="Coming in Step 3">
                                    <i class="fas fa-box me-1"></i>Products
                                    <span class="badge bg-warning ms-1">Soon</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Consumer")">
                                    <i class="fas fa-users me-1"></i>Consumers
                                    <span class="badge bg-success ms-1">New</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-cog me-1"></i>User Management
                                    <span class="badge bg-primary ms-1">Active</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "User")">
                                        <i class="fas fa-users me-2"></i>Users
                                    </a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Role")">
                                        <i class="fas fa-user-tag me-2"></i>Roles
                                    </a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Tenant")">
                                        <i class="fas fa-building me-2"></i>Tenants
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "User")">
                                        <i class="fas fa-plus me-2"></i>Add New User
                                    </a></li>
                                </ul>
                            </li>                            <li class="nav-item">
                                <a class="nav-link disabled text-muted" href="#" title="Coming in Step 5">
                                    <i class="fas fa-certificate me-1"></i>Licenses
                                    <span class="badge bg-warning ms-1">Soon</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Audit")">
                                    <i class="fas fa-history me-1"></i>Audit Logs
                                    <span class="badge bg-info ms-1">New</span>
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <div class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="navbar-text me-3">
                                <i class="fas fa-user-circle me-2"></i>
                                <strong>@User.Identity.Name</strong>
                                <small class="ms-1 opacity-75">(@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</small>
                            </div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content Area -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Enhanced Footer -->
    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-shield-alt me-2"></i>TechWayFit License Management
                    </h6>
                    <p class="small mb-0">
                        Comprehensive license generation, validation, and management system.
                        Built with security and scalability in mind.
                    </p>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-3">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none">Dashboard</a></li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li><span class="">Products (Coming Soon)</span></li>
                            <li><a href="@Url.Action("Index", "Consumer")" class="text-light text-decoration-none">Consumers</a></li>
                            <li><span class="">Licenses (Coming Soon)</span></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Account")" class="text-light text-decoration-none">Login</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-3">System Status</h6>
                    <div class="small">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Authentication:</span>
                            <span class="badge bg-success">Active</span>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Services:</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Version:</span>
                            <span>v2.0.0</span>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-3 opacity-25">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small>
                        &copy; 2025 TechWayFit. All rights reserved. Internal Use Only.
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small>
                        Built with <i class="fas fa-heart text-danger"></i> using ASP.NET Core & Bootstrap
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Scripts -->
    <script>
        // Enhanced interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation to cards
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.animationDelay = (index * 0.1) + 's';
                card.classList.add('fade-in-up');
            });
            
            // Enhanced button hover effects
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Force re-initialize dropdowns to ensure they work
            var dropdownElementList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'));
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
