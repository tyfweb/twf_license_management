@model TechWayFit.Licensing.Management.Web.ViewModels.Approval.ApprovalDashboardViewModel
@{
    ViewData["Title"] = "Approval Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-clipboard-check text-primary me-2"></i>
                    Approval Dashboard
                </h1>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("MySubmissions")" class="btn btn-outline-primary">
                        <i class="fas fa-user-clock me-1"></i>
                        My Submissions
                    </a>
                    <button type="button" class="btn btn-primary" onclick="window.location.reload()">
                        <i class="fas fa-sync-alt me-1"></i>
                        Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.Statistics.TotalPending</h5>
                            <p class="card-text text-muted">Pending Approval</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.Statistics.TotalApprovedToday</h5>
                            <p class="card-text text-muted">Approved Today</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-times-circle fa-2x text-danger"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.Statistics.TotalRejectedToday</h5>
                            <p class="card-text text-muted">Rejected Today</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-hourglass-half fa-2x text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.Statistics.OldestPendingDays</h5>
                            <p class="card-text text-muted">Oldest (Days)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Items -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>
                Pending Approvals (@Model.PendingItems.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (Model.PendingItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Submitted By</th>
                                <th>Submitted On</th>
                                <th>Days in Queue</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PendingItems)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@item.EntityType</span>
                                    </td>
                                    <td>
                                        <strong>@item.EntityDisplayName</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.EntityDescription</small>
                                    </td>
                                    <td>@item.SubmittedBy</td>
                                    <td>@item.SubmittedOn.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (item.DaysInQueue > 7)
                                        {
                                            <span class="badge bg-danger">@item.DaysInQueue days</span>
                                        }
                                        else if (item.DaysInQueue > 3)
                                        {
                                            <span class="badge bg-warning">@item.DaysInQueue days</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.DaysInQueue days</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">@item.EntityStatus</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (item.CanApprove)
                                            {
                                                <button type="button" class="btn btn-sm btn-success" 
                                                        onclick="approveItem('@item.EntityId', '@item.EntityType', '@item.EntityDisplayName')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                            @if (item.CanReject)
                                            {
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                        onclick="rejectItem('@item.EntityId', '@item.EntityType', '@item.EntityDisplayName')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                            <a href="@item.DetailsUrl" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5>No Pending Approvals</h5>
                    <p class="text-muted">All items have been processed!</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approvalForm" method="post" asp-action="Approve">
                <div class="modal-body">
                    <input type="hidden" id="approveId" name="id" />
                    <input type="hidden" id="approveType" name="type" />
                    
                    <p>Are you sure you want to approve <strong id="approveItemName"></strong>?</p>
                    
                    <div class="mb-3">
                        <label for="approveComments" class="form-label">Comments (Optional)</label>
                        <textarea class="form-control" id="approveComments" name="comments" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>
                        Approve
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectionForm" method="post" asp-action="Reject">
                <div class="modal-body">
                    <input type="hidden" id="rejectId" name="id" />
                    <input type="hidden" id="rejectType" name="type" />
                    
                    <p>Are you sure you want to reject <strong id="rejectItemName"></strong>?</p>
                    
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="rejectReason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i>
                        Reject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveItem(id, type, name) {
            document.getElementById('approveId').value = id;
            document.getElementById('approveType').value = type;
            document.getElementById('approveItemName').textContent = name;
            new bootstrap.Modal(document.getElementById('approvalModal')).show();
        }

        function rejectItem(id, type, name) {
            document.getElementById('rejectId').value = id;
            document.getElementById('rejectType').value = type;
            document.getElementById('rejectItemName').textContent = name;
            document.getElementById('rejectReason').value = '';
            new bootstrap.Modal(document.getElementById('rejectionModal')).show();
        }

        // Auto-refresh every 30 seconds
        setInterval(function() {
            if (!document.querySelector('.modal.show')) {
                window.location.reload();
            }
        }, 30000);
    </script>
}
