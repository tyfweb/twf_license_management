@model TechWayFit.Licensing.Management.Web.ViewModels.Product.ProductVersionIndexViewModel

@{
    ViewData["Title"] = "Product Versions";
    ViewData["PageTitle"] = "Product Versions";
    var versions = ViewData["Versions"] as List<TechWayFit.Licensing.Management.Web.ViewModels.Product.VersionInfoViewModel> ?? new List<TechWayFit.Licensing.Management.Web.ViewModels.Product.VersionInfoViewModel>();
}
<div class="container-fluid py-3">
    <!-- Header Section -->
    <div class="header mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Product Versions</h2>
                <p class="text-muted mb-0">Manage version releases and lifecycle for @Model.ProductName.</p>
            </div>
            <div class="btn-group" role="group">
                <a href="@Url.Action("Details", "Product", new { id = Model.ProductId })" class="btn btn-outline-primary">
                    <i class="fas fa-info-circle me-1"></i>Basic Details
                </a>
                <a href="@Url.Action("Tiers", "Product", new { id = Model.ProductId })" class="btn btn-outline-primary">
                    <i class="fas fa-layer-group me-1"></i>Tiers
                </a>
                <a href="@Url.Action("Index", "ProductVersion", new { productId = Model.ProductId })" class="btn btn-primary">
                    <i class="fas fa-code-branch me-1"></i>Versions
                </a>
                <a href="@Url.Action("Index", "ProductFeature", new { productId = Model.ProductId })" class="btn btn-outline-primary">
                    <i class="fas fa-star me-1"></i>Features
                </a>
            </div>
        </div>
    </div>
 
<!-- Product Info Card -->
    <div class="row g-2 mb-3">
        <div class="col-12">
            <div class="sidebar-section">
                <div class="section-header">
                    <div class="d-flex align-items-center">
                        <div class="product-icon me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-cube text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">@Model.ProductName</h6>
                            <small class="text-muted">@Model.ProductDescription</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Statistics Cards -->
    <div class="row g-2 mb-3">
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-code-branch"></i>
                    </div>
                    <div class="stats-number">@versions.Count</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Total Versions</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card stats-card-success">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stats-number">@versions.Count(v => v.IsCurrent)</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Current Version</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stats-number">@versions.Count(v => v.IsActive)</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Active Versions</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="stats-card">
                <div class="stats-row-1">
                    <div class="stats-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stats-number">@versions.Count(v => v.SupportEndDate.HasValue && v.SupportEndDate > DateTime.Now)</div>
                </div>
                <div class="stats-row-2">
                    <div class="stats-label">Supported</div>
                </div>
            </div>
        </div>
    </div>


    <!-- Alert Messages -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-2">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Versions Section -->
            <div class="edit-section">
                <div class="section-header">
                    <h5><i class="fas fa-code-branch me-2"></i>Product Versions</h5>
                </div>
                <div class="section-content">
                    @if (versions.Any())
                    {
                        @foreach (var version in versions.OrderByDescending(v => v.ReleaseDate).ThenByDescending(v => v.Version))
                        {
                            <div class="version-card">
                                <div class="version-header">
                                    <div>
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <h6 class="mb-0">@version.Name</h6>
                                            <span class="version-badge @(version.IsCurrent ? "current" : "")">
                                                v@version.Version
                                                @if (version.IsCurrent)
                                                {
                                                    <text>(Current)</text>
                                                }
                                            </span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(version.ReleaseNotes))
                                        {
                                            <p class="text-muted mb-2">@version.ReleaseNotes</p>
                                        }
                                        <div class="row">
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar"></i> 
                                                    Released: @(version.ReleaseDate != DateTime.MinValue ? version.ReleaseDate.ToString("MMM dd, yyyy") : "Not set")
                                                </small>
                                            </div>
                                            @if (version.EndOfLifeDate.HasValue)
                                            {
                                                <div class="col-md-6">
                                                    <small class="text-muted">
                                                        <i class="fas fa-exclamation-triangle"></i> 
                                                        EOL: @version.EndOfLifeDate.Value.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="version-actions">
                                        @if (!version.IsCurrent)
                                        {
                                            <form method="post" 
                                                  action="@Url.Action("SetCurrent", new { productId = Model.ProductId, versionId = version.Id })" 
                                                  style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-success"
                                                        title="Set as current version">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            </form>
                                        }
                                        <a href="@Url.Action("Details", new { productId = Model.ProductId, versionId = version.Id })" 
                                           class="btn btn-sm btn-outline-info"
                                           title="View version details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { productId = Model.ProductId, versionId = version.Id })" 
                                           class="btn btn-sm btn-outline-primary"
                                           title="Edit version">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (version.CanDelete)
                                        {
                                            <form method="post" 
                                                  action="@Url.Action("Delete", new { productId = Model.ProductId, versionId = version.Id })" 
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to delete this version?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-danger"
                                                        title="Delete version">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-tags text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-muted mb-3">No Versions Found</h5>
                            <p class="text-muted mb-4">
                                This product doesn't have any versions yet. 
                                Start by creating the first version to track releases and updates.
                            </p>
                            <a href="@Url.Action("Create", new { productId = Model.ProductId })" 
                               class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Version
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="sidebar-section">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", new { productId = Model.ProductId })" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Add New Version
                        </a>
                        <a href="@Url.Action("Index", "ProductTier", new { productId = Model.ProductId })" 
                           class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-layer-group"></i> Manage Tiers
                        </a>
                        <a href="@Url.Action("Index", "ProductFeature", new { productId = Model.ProductId })" 
                           class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-puzzle-piece"></i> Manage Features
                        </a>
                    </div>
                </div>
            </div>

            <!-- Version Management Info -->
            <div class="sidebar-section">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i> Version Management
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Version Guidelines</h6>
                    <ul class="small mb-3">
                        <li>Use semantic versioning (Major.Minor.Patch)</li>
                        <li>Only one version can be marked as current</li>
                        <li>Set proper release dates for tracking</li>
                        <li>Document changes in release notes</li>
                    </ul>
                    
                    <h6>Best Practices</h6>
                    <ul class="small mb-3">
                        <li>Plan version releases in advance</li>
                        <li>Communicate end-of-life dates clearly</li>
                        <li>Maintain backwards compatibility when possible</li>
                        <li>Test thoroughly before marking as current</li>
                    </ul>

                    @if (versions.Any())
                    {
                        <h6>Quick Stats</h6>
                        <ul class="list-unstyled small">
                            <li><strong>Total Versions:</strong> @versions.Count</li>
                            <li><strong>Current Version:</strong> @(versions.FirstOrDefault(v => v.IsCurrent)?.Version ?? "None")</li>
                            <li><strong>Latest Release:</strong> @(versions.Any() && versions.OrderByDescending(v => v.ReleaseDate).First().ReleaseDate != DateTime.MinValue ? versions.OrderByDescending(v => v.ReleaseDate).First().ReleaseDate.ToString("MMM yyyy") : "None")</li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
