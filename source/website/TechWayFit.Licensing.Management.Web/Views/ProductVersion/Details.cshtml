@model TechWayFit.Licensing.Management.Web.ViewModels.Product.ProductVersionDetailsViewModel

@{
    ViewData["Title"] = "Version Details";
    ViewData["PageTitle"] = "Version Details";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Products</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Product", new { id = Model.ProductId })">@Model.ProductName</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductVersion", new { productId = Model.ProductId })">Versions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2 class="mb-1">@Model.Name</h2>
                    <p class="text-muted mb-0">Version @Model.Version details for @Model.ProductName</p>
                </div>
                <div class="action-buttons">
                    <a href="@Url.Action("Index", "ProductVersion", new { productId = Model.ProductId })" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Versions
                    </a>
                    <a href="@Url.Action("Edit", "ProductVersion", new { productId = Model.ProductId, versionId = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Version
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Version Overview Section -->
    <div class="row">
        <div class="col-12">
            <div class="details-section">
                <div class="section-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Version Overview</h5>
                    <span class="version-badge @(Model.IsCurrent ? "current" : "archived")">
                        @if (Model.IsCurrent)
                        {
                            <text>Current Version</text>
                        }
                        else
                        {
                            <text>@(Model.IsActive ? "Active" : "Archived")</text>
                        }
                    </span>
                </div>
                <div class="section-content">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="label">Version Number</div>
                            <div class="value">@Model.Version</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Version Name</div>
                            <div class="value">@Model.Name</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Release Date</div>
                            <div class="value">
                                @if (Model.ReleaseDate != DateTime.MinValue)
                                {
                                    @Model.ReleaseDate.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </div>
                        </div>
                        @if (Model.EndOfLifeDate.HasValue)
                        {
                            <div class="info-item">
                                <div class="label">End of Life Date</div>
                                <div class="value">@Model.EndOfLifeDate.Value.ToString("MMM dd, yyyy")</div>
                            </div>
                        }
                        <div class="info-item">
                            <div class="label">Status</div>
                            <div class="value">
                                @if (Model.IsCurrent)
                                {
                                    <span class="text-success"><i class="fas fa-star me-1"></i>Current Version</span>
                                }
                                else if (Model.IsActive)
                                {
                                    <span class="text-info"><i class="fas fa-check-circle me-1"></i>Active</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="fas fa-archive me-1"></i>Archived</span>
                                }
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="label">Product</div>
                            <div class="value">
                                <a href="@Url.Action("Details", "Product", new { id = Model.ProductId })" class="text-decoration-none">
                                    @Model.ProductName
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Release Notes Section -->
    @if (!string.IsNullOrWhiteSpace(Model.ReleaseNotes))
    {
        <div class="row">
            <div class="col-12">
                <div class="details-section">
                    <div class="section-header">
                        <h5><i class="fas fa-file-alt me-2"></i>Release Notes</h5>
                    </div>
                    <div class="section-content">
                        <div class="release-notes">
                            @Html.Raw(Html.Encode(Model.ReleaseNotes).Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Audit Information Section -->
    <div class="row">
        <div class="col-12">
            <div class="details-section">
                <div class="section-header">
                    <h5><i class="fas fa-history me-2"></i>Audit Information</h5>
                </div>
                <div class="section-content">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="label">Created At</div>
                            <div class="value">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Last Updated</div>
                            <div class="value">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Features Section -->
    <div class="row">
        <div class="col-12">
            <div class="details-section">
                <div class="section-header">
                    <h5><i class="fas fa-star me-2"></i>Related Actions</h5>
                </div>
                <div class="section-content">
                    <div class="action-buttons">
                        <a href="@Url.Action("Index", "ProductFeature", new { productId = Model.ProductId })" class="btn btn-outline-primary">
                            <i class="fas fa-star me-1"></i>View Product Features
                        </a>
                        <a href="@Url.Action("Details", "Product", new { id = Model.ProductId })" class="btn btn-outline-info">
                            <i class="fas fa-info-circle me-1"></i>Product Details
                        </a>
                        @if (!Model.IsCurrent)
                        {
                            <form method="post" 
                                  action="@Url.Action("SetCurrent", "ProductVersion", new { productId = Model.ProductId, versionId = Model.Id })" 
                                  style="display: inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" 
                                        class="btn btn-outline-success"
                                        onclick="return confirm('Are you sure you want to set this as the current version?')">
                                    <i class="fas fa-star me-1"></i>Set as Current
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
