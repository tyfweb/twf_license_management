<!-- Job Action Forms -->
<form id="triggerJobForm" method="post" action="@Url.Action("TriggerJob", "System")" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="jobName" id="triggerJobName" />
</form>

<form id="toggleJobForm" method="post" action="@Url.Action("ToggleJob", "System")" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="jobId" id="toggleJobId" />
    <input type="hidden" name="enable" id="toggleJobEnable" />
</form>

@section Scripts {
    <script>
        function triggerJob(jobName) {
            if (confirm(`Are you sure you want to trigger the job: ${jobName}?`)) {
                document.getElementById('triggerJobName').value = jobName;
                document.getElementById('triggerJobForm').submit();
            }
        }

        function toggleJob(jobId, enable) {
            const action = enable ? 'enable' : 'disable';
            if (confirm(`Are you sure you want to ${action} the job: ${jobId}?`)) {
                document.getElementById('toggleJobId').value = jobId;
                document.getElementById('toggleJobEnable').value = enable;
                document.getElementById('toggleJobForm').submit();
            }
        }

        function refreshJobStatus() {
            // Show loading indicator
            const refreshBtn = document.querySelector('[onclick="refreshJobStatus()"]');
            const originalText = refreshBtn.innerHTML;
            refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Refreshing...';
            refreshBtn.disabled = true;

            // Simulate API call to get job status
            fetch('@Url.Action("GetJobStats", "System")')
                .then(response => response.json())
                .then(data => {
                    // Update the UI with fresh data
                    console.log('Job stats refreshed:', data);
                    
                    // Show success message
                    showAlert('success', 'Job status refreshed successfully!');
                })
                .catch(error => {
                    console.error('Error refreshing job status:', error);
                    showAlert('danger', 'Error refreshing job status. Please try again.');
                })
                .finally(() => {
                    // Restore button
                    refreshBtn.innerHTML = originalText;
                    refreshBtn.disabled = false;
                });
        }

        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            // Insert alert at the top of the content
            const container = document.querySelector('.container-fluid');
            const firstCard = container.querySelector('.card');
            firstCard.insertAdjacentHTML('beforebegin', alertHtml);
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }

        // Auto-refresh every 30 seconds
        setInterval(() => {
            fetch('@Url.Action("GetJobStats", "System")')
                .then(response => response.json())
                .then(data => {
                    // Silently update job status indicators
                    console.log('Background refresh:', data);
                })
                .catch(error => {
                    console.log('Background refresh failed:', error);
                });
        }, 30000);
    </script>
}

