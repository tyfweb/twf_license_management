@model TechWayFit.Licensing.Management.Web.ViewModels.Role.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
    ViewData["Description"] = "Add a new user role to the system";
}

@section Styles {

    <link rel="stylesheet" href="~/css/product-management.css" />
    <link rel="stylesheet" href="~/css/form-styles.css" />
}

<div class="container-fluid py-3">
    @await Html.PartialAsync("_PageHeaderPartial", new TechWayFit.Licensing.Management.Web.ViewModels.Shared.PageHeaderViewModel
    {
        Title = "Create New Role",
        BackButtonText = "Back to Role Management",
        BackButtonController = "Role",
        BackButtonAction = "Index",
        Icon = "fas fa-user-tag"
    })

    <!-- Create Role Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-sm bg-info-soft rounded me-3">
                            <i class="fas fa-user-tag text-info"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Role Information</h5>
                            <p class="text-muted small mb-0">Define the role name, description, and tenant assignment</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="createRoleForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-persistent d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>Please correct the errors below.</div>
                        </div>
                        
                        <!-- Tenant Selection Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-building me-2"></i>Tenant Assignment <span class="text-danger">*</span>
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="TenantId" class="form-label">Select Tenant <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-building text-muted"></i>
                                            </span>
                                            <select asp-for="TenantId" class="form-select border-start-0" asp-items="Model.AvailableTenants">
                                                <option value="">-- Select Tenant --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="TenantId" class="text-danger small"></span>
                                        <div class="form-text small">
                                            The tenant this role will belong to. Users with this role will be limited to this tenant's data.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Role Information Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-user-shield me-2"></i>Role Details
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="RoleName" class="form-label">Role Name <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-user-tag text-muted"></i>
                                            </span>
                                            <input asp-for="RoleName" class="form-control border-start-0" placeholder="Enter role name (e.g., Administrator, Manager, User)" />
                                        </div>
                                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="RoleDescription" class="form-label">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0 align-items-start pt-2">
                                                <i class="fas fa-align-left text-muted"></i>
                                            </span>
                                            <textarea asp-for="RoleDescription" class="form-control border-start-0" rows="3" placeholder="Describe the role's purpose and responsibilities..."></textarea>
                                        </div>
                                        <span asp-validation-for="RoleDescription" class="text-danger small"></span>
                                        <div class="form-text small">
                                            Optional description to help identify the role's purpose and permissions.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="@Url.Action("Index", "Role")" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-info">
                                        <i class="fas fa-user-tag me-1"></i>Create Role
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Role Management
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-lightbulb me-1"></i>Best Practices
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Use descriptive role names that clearly indicate the level of access</li>
                            <li>Always assign roles to the appropriate tenant</li>
                            <li>Provide clear descriptions for easy identification</li>
                            <li>Follow the principle of least privilege</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-shield-alt me-1"></i>Common Roles
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li><strong>Administrator:</strong> Full system access</li>
                            <li><strong>Manager:</strong> Department management</li>
                            <li><strong>User:</strong> Standard user access</li>
                            <li><strong>Viewer:</strong> Read-only access</li>
                        </ul>
                    </div>

                    <div>
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-question-circle me-1"></i>Need Help?
                        </h6>
                        <p class="small text-muted mb-0">
                            Roles define what users can do in the system. Each role is associated with a specific tenant to ensure proper data isolation.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
