@model TechWayFit.Licensing.Management.Web.ViewModels.Role.EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    ViewData["Description"] = "Modify role information and permissions";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-management.css" />
    <link rel="stylesheet" href="~/css/form-styles.css" />
}

<div class="container-fluid py-3">
    @await Html.PartialAsync("_PageHeaderPartial", new TechWayFit.Licensing.Management.Web.ViewModels.Shared.PageHeaderViewModel
    {
        Title = $"Edit Role - {Model.RoleName}",
        BackButtonText = "Back to Role Details",
        BackButtonController = "Role",
        BackButtonAction = "Details",
        BackButtonRouteValues = new { id = Model.RoleId },
        Icon = "fas fa-edit"
    })

    <!-- Edit Role Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-sm bg-warning-soft rounded me-3">
                            <i class="fas fa-edit text-warning"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Edit Role Information</h5>
                            <p class="text-muted small mb-0">Update role details and configuration</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="editRoleForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="RoleId" />
                        <input type="hidden" asp-for="CreatedOn" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="hidden" asp-for="UpdatedOn" />
                        <input type="hidden" asp-for="UpdatedBy" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-persistent d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>Please correct the errors below.</div>
                        </div>
                        
                        <!-- Tenant Selection Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-building me-2"></i>Tenant Assignment
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="TenantId" class="form-label">Select Tenant <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-building text-muted"></i>
                                            </span>
                                            <select asp-for="TenantId" class="form-select border-start-0" asp-items="Model.AvailableTenants">
                                                <option value="">-- Select Tenant --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="TenantId" class="text-danger small"></span>
                                        <div class="form-text small">
                                            The tenant this role belongs to. Users with this role will be limited to this tenant's data.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Role Information Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-user-shield me-2"></i>Role Details
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="RoleName" class="form-label">Role Name <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-user-tag text-muted"></i>
                                            </span>
                                            <input asp-for="RoleName" class="form-control border-start-0" placeholder="Enter role name (e.g., Administrator, Manager, User)" />
                                        </div>
                                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="RoleDescription" class="form-label">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0 align-items-start pt-2">
                                                <i class="fas fa-align-left text-muted"></i>
                                            </span>
                                            <textarea asp-for="RoleDescription" class="form-control border-start-0" rows="3" placeholder="Describe the role's purpose and responsibilities..."></textarea>
                                        </div>
                                        <span asp-validation-for="RoleDescription" class="text-danger small"></span>
                                        <div class="form-text small">
                                            Optional description to help identify the role's purpose and permissions.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Role Settings Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-cogs me-2"></i>Role Settings
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body p-3">
                                            <div class="form-check">
                                                <input asp-for="IsAdminRole" class="form-check-input" type="checkbox" id="isAdminRole">
                                                <label class="form-check-label w-100" for="isAdminRole">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar avatar-sm bg-danger-soft rounded me-3">
                                                            <i class="fas fa-crown text-danger"></i>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <div class="fw-semibold">Administrator Role</div>
                                                            <div class="text-muted small">Grant full system access and administrative privileges</div>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body p-3">
                                            <div class="form-check">
                                                <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive">
                                                <label class="form-check-label w-100" for="isActive">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar avatar-sm bg-success-soft rounded me-3">
                                                            <i class="fas fa-check-circle text-success"></i>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <div class="fw-semibold">Active Role</div>
                                                            <div class="text-muted small">Enable this role for assignment to users</div>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                        </div>

                        <!-- Module Permissions Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-warning mb-3">
                                <i class="fas fa-shield-alt me-2"></i>Module Permissions
                            </h6>
                            <div class="alert alert-info d-flex align-items-center mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                <div class="small">
                                    Modify access levels for each system module. Changes will affect all users with this role.
                                </div>
                            </div>
                            
                            <div class="row g-3" id="permissionsContainer">
                                @foreach (var module in Enum.GetValues<TechWayFit.Licensing.Management.Core.Models.User.SystemModule>())
                                {
                                    <div class="col-md-6">
                                        <div class="card border h-100">
                                            <div class="card-body p-3">
                                                <div class="d-flex align-items-start">
                                                    <div class="flex-shrink-0">
                                                        <div class="avatar avatar-sm bg-@(GetModuleBadgeColor(module))-soft rounded me-3">
                                                            <i class="@(GetModuleIcon(module)) text-@(GetModuleBadgeColor(module))"></i>
                                                        </div>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@(GetModuleName(module))</h6>
                                                        <p class="small text-muted mb-2">@(GetModuleDescription(module))</p>
                                                        
                                                        <div class="btn-group-vertical w-100" role="group">
                                                            @foreach (var level in Enum.GetValues<TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel>())
                                                            {
                                                                var isSelected = Model.Permissions.GetValueOrDefault(module, TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.None) == level;
                                                                <input type="radio" 
                                                                       class="btn-check" 
                                                                       name="Permissions[@((int)module)]" 
                                                                       id="@(module)_@(level)" 
                                                                       value="@((int)level)"
                                                                       @(isSelected ? "checked" : "")>
                                                                <label class="btn btn-outline-@(GetPermissionColor(level)) btn-sm text-start" for="@(module)_@(level)">
                                                                    <i class="@(GetPermissionIcon(level)) me-2"></i>
                                                                    @(GetPermissionName(level))
                                                                </label>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }                            </div>
                            
                            <!-- Quick Actions for Permissions -->
                            <div class="mt-3">
                                <div class="d-flex gap-2 flex-wrap">
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="setAllPermissions(3)">
                                        <i class="fas fa-check-circle me-1"></i>All Approver
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="setAllPermissions(2)">
                                        <i class="fas fa-edit me-1"></i>All Read/Write
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-info" onclick="setAllPermissions(1)">
                                        <i class="fas fa-eye me-1"></i>All Read Only
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="setAllPermissions(0)">
                                        <i class="fas fa-ban me-1"></i>Clear All
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="@Url.Action("Details", new { id = Model.RoleId })" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-save me-1"></i>Update Role
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="col-lg-4">
            <!-- Audit Information -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-history text-info me-2"></i>Audit Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="audit-info">
                        <div class="audit-item">
                            <div class="audit-label">Created On</div>
                            <div class="audit-value">@Model.CreatedOn.ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                        </div>
                        <div class="audit-item">
                            <div class="audit-label">Created By</div>
                            <div class="audit-value">@Model.CreatedBy</div>
                        </div>
                        @if (Model.UpdatedOn.HasValue)
                        {
                            <div class="audit-item">
                                <div class="audit-label">Last Updated</div>
                                <div class="audit-value">@Model.UpdatedOn.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                            </div>
                            <div class="audit-item">
                                <div class="audit-label">Updated By</div>
                                <div class="audit-value">@(Model.UpdatedBy ?? "Unknown")</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Role Management
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-lightbulb me-1"></i>Best Practices
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Use descriptive role names that clearly indicate the level of access</li>
                            <li>Always assign roles to the appropriate tenant</li>
                            <li>Provide clear descriptions for easy identification</li>
                            <li>Follow the principle of least privilege</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-shield-alt me-1"></i>Admin Roles
                        </h6>
                        <p class="small text-muted mb-0">
                            Administrator roles have elevated privileges and should be assigned carefully. They typically have access to user management, system configuration, and sensitive data.
                        </p>
                    </div>

                    <div>
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-question-circle me-1"></i>Need Help?
                        </h6>
                        <p class="small text-muted mb-0">
                            Changes to roles will affect all users assigned to this role. Make sure to review the impact before saving changes.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
      <script>
        // Function to set all permissions to a specific level
        function setAllPermissions(level) {
            const allRadioButtons = document.querySelectorAll('input[type="radio"][name^="Permissions["]');
            allRadioButtons.forEach(radio => {
                if (radio.value == level) {
                    radio.checked = true;
                }
            });
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            document.getElementById('editRoleForm').addEventListener('submit', function(e) {
                const roleName = document.querySelector('input[name="RoleName"]').value.trim();
                const tenantId = document.querySelector('select[name="TenantId"]').value;
                
                if (!roleName) {
                    e.preventDefault();
                    alert('Please enter a role name.');
                    return false;
                }
                
                if (!tenantId) {
                    e.preventDefault();
                    alert('Please select a tenant.');
                    return false;
                }
            });
        });    </script>
}

@functions {
    private string GetModuleName(TechWayFit.Licensing.Management.Core.Models.User.SystemModule module)
    {
        return TechWayFit.Licensing.Management.Core.Models.User.ModuleInfo.ModuleNames.GetValueOrDefault(module, module.ToString());
    }
    
    private string GetModuleDescription(TechWayFit.Licensing.Management.Core.Models.User.SystemModule module)
    {
        return TechWayFit.Licensing.Management.Core.Models.User.ModuleInfo.ModuleDescriptions.GetValueOrDefault(module, "");
    }
    
    private string GetModuleIcon(TechWayFit.Licensing.Management.Core.Models.User.SystemModule module)
    {
        return TechWayFit.Licensing.Management.Core.Models.User.ModuleInfo.ModuleIcons.GetValueOrDefault(module, "fas fa-cog");
    }
    
    private string GetModuleBadgeColor(TechWayFit.Licensing.Management.Core.Models.User.SystemModule module)
    {
        return module switch
        {
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Products => "primary",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Consumers => "success",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Licenses => "warning",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Users => "info",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Roles => "secondary",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Tenants => "dark",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Approvals => "success",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Reports => "info",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.Audit => "danger",
            TechWayFit.Licensing.Management.Core.Models.User.SystemModule.System => "warning",
            _ => "secondary"
        };
    }
    
    private string GetPermissionName(TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel level)
    {
        return TechWayFit.Licensing.Management.Core.Models.User.ModuleInfo.PermissionNames.GetValueOrDefault(level, level.ToString());
    }
    
    private string GetPermissionColor(TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel level)
    {
        return level switch
        {
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.None => "secondary",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.ReadOnly => "info",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.ReadWrite => "warning",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.Approver => "success",
            _ => "secondary"
        };
    }
    
    private string GetPermissionIcon(TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel level)
    {
        return level switch
        {
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.None => "fas fa-ban",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.ReadOnly => "fas fa-eye",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.ReadWrite => "fas fa-edit",
            TechWayFit.Licensing.Management.Core.Models.User.PermissionLevel.Approver => "fas fa-check-circle",
            _ => "fas fa-question"
        };
    }
}
