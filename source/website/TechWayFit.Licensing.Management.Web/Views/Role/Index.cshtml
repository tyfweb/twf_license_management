@model TechWayFit.Licensing.Management.Web.ViewModels.Role.RoleListViewModel
@{
    ViewData["Title"] = "Role Management";
    ViewData["Description"] = "Manage user roles and permissions";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-management.css" />
}

<div class="container-fluid py-3">
    <!-- Header Section -->
    <div class="header mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Role Management</h2>
                <p class="text-muted mb-0">Manage user roles and their permissions within tenants.</p>
            </div>
            <div class="d-flex gap-3">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Role
                </a>
                
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-cog me-2"></i>Quick Actions
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Index", "User")">
                            <i class="fas fa-users me-2"></i>Manage Users
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Tenant")">
                            <i class="fas fa-building me-2"></i>Manage Tenants
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Create", "User")">
                            <i class="fas fa-plus me-2"></i>Add User
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Create", "Tenant")">
                            <i class="fas fa-plus me-2"></i>Add Tenant
                        </a></li>
                    </ul>
                </div>
                
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-secondary" onclick="refreshRoleList()" title="Refresh">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="exportRoles()" title="Export">
                        <i class="fas fa-download"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-md bg-info-soft rounded">
                                <i class="fas fa-user-tag text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="h4 mb-0">@Model.TotalRoles</div>
                            <div class="text-muted">Total Roles</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-md bg-success-soft rounded">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="h4 mb-0">@Model.ActiveRoles</div>
                            <div class="text-muted">Active Roles</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Roles Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-shield me-2"></i>System Roles
                </h5>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Roles.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-3">Role</th>
                                <th class="border-0">Tenant</th>
                                <th class="border-0">Description</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Created</th>
                                <th class="border-0 text-end pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.Roles)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm bg-info-soft rounded me-3">
                                                <i class="fas fa-user-tag text-info"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@role.RoleName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-muted">@(role.TenantName ?? "System")</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">@(role.RoleDescription ?? "No description")</span>
                                    </td>
                                    <td>
                                        @if (role.IsActive)
                                        {
                                            <span class="badge bg-success-soft text-success">
                                                <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-soft text-danger">
                                                <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@role.CreatedOn.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="d-flex gap-1 justify-content-end">
                                            <button type="button" class="btn btn-sm btn-outline-primary" title="View Role">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Edit Role">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Role">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar avatar-lg bg-light rounded-circle mx-auto mb-3">
                        <i class="fas fa-user-tag text-muted"></i>
                    </div>
                    <h5 class="text-muted">No roles found</h5>
                    <p class="text-muted mb-4">There are no roles configured in the system yet.</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create First Role
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshRoleList() {
            window.location.reload();
        }

        function exportRoles() {
            window.location.href = '@Url.Action("Export")';
        }
    </script>
}