                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(response => response.json())
            .then(result => {
                validationBtn.innerHTML = originalText;
                validationBtn.disabled = false;
                
                if (result.success) {
                    const validationResult = result.data;
                    let message = `License validation completed.\n\n`;
                    message += `Status: ${validationResult.isValid ? 'Valid' : 'Invalid'}\n`;
                    message += `Checked: ${new Date().toLocaleString()}\n`;
                    
                    if (validationResult.issues && validationResult.issues.length > 0) {
                        message += `\nIssues found:\n${validationResult.issues.join('\n')}`;
                    }
                    
                    showNotification(
                        `License is ${validationResult.isValid ? 'valid' : 'invalid'}`,
                        validationResult.isValid ? 'success' : 'error'
                    );
                    
                    // Show detailed results in console for debugging
                    console.log('Validation Results:', validationResult);
                } else {
                    showNotification('License validation failed: ' + (result.message || 'Unknown error'), 'error');
                }
            })
            .catch(error => {
                validationBtn.innerHTML = originalText;
                validationBtn.disabled = false;
                console.error('Validation error:', error);
                showNotification('An error occurred during license validation', 'error');
            });
        }

