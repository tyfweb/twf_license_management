@model TechWayFit.Licensing.Management.Web.ViewModels.Tenant.CreateTenantViewModel
@{
    ViewData["Title"] = "Create Tenant";
    ViewData["Description"] = "Add a new tenant organization to the system";
}

@section Styles {

    <link rel="stylesheet" href="~/css/product-management.css" />
    <link rel="stylesheet" href="~/css/form-styles.css" />
}

<div class="container-fluid py-3">
    @await Html.PartialAsync("_PageHeaderPartial", new TechWayFit.Licensing.Management.Web.ViewModels.Shared.PageHeaderViewModel
    {
        Title = "Create New Tenant",
        BackButtonText = "Back to Tenant Management",
        BackButtonController = "Tenant",
        BackButtonAction = "Index",
        Icon = "fas fa-building"
    })

    <!-- Create Tenant Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-sm bg-success-soft rounded me-3">
                            <i class="fas fa-building text-success"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Tenant Information</h5>
                            <p class="text-muted small mb-0">Define the tenant organization details and settings</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="createTenantForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-persistent d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>Please correct the errors below.</div>
                        </div>
                        
                        <!-- Basic Information Section -->
                        <div class="form-section mb-4">
                            <h6 class="text-success mb-3">
                                <i class="fas fa-info-circle me-2"></i>Basic Information
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label asp-for="TenantName" class="form-label">Tenant Name <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-building text-muted"></i>
                                            </span>
                                            <input asp-for="TenantName" class="form-control border-start-0" placeholder="Enter organization name" />
                                        </div>
                                        <span asp-validation-for="TenantName" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="TenantCode" class="form-label">Tenant Code</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-tag text-muted"></i>
                                            </span>
                                            <input asp-for="TenantCode" class="form-control border-start-0" placeholder="CODE" style="text-transform: uppercase;" />
                                        </div>
                                        <span asp-validation-for="TenantCode" class="text-danger small"></span>
                                        <div class="form-text small">
                                            Unique code for system identification
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0 align-items-start pt-2">
                                                <i class="fas fa-align-left text-muted"></i>
                                            </span>
                                            <textarea asp-for="Description" class="form-control border-start-0" rows="3" placeholder="Describe the tenant organization..."></textarea>
                                        </div>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Website" class="form-label">Website</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-globe text-muted"></i>
                                            </span>
                                            <input asp-for="Website" class="form-control border-start-0" placeholder="https://example.com" />
                                        </div>
                                        <span asp-validation-for="Website" class="text-danger small"></span>
                                        <div class="form-text small">
                                            Optional website URL for the organization
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="@Url.Action("Index", "Tenant")" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-building me-1"></i>Create Tenant
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle text-success me-2"></i>Tenant Management
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-lightbulb me-1"></i>What is a Tenant?
                        </h6>
                        <p class="small text-muted mb-0">
                            A tenant represents a client organization in the system. Each tenant has isolated data and users, ensuring complete separation between different organizations.
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-shield-alt me-1"></i>Data Isolation
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Complete data separation between tenants</li>
                            <li>Users can only access their tenant's data</li>
                            <li>Licenses are scoped to specific tenants</li>
                            <li>Reporting is tenant-specific</li>
                        </ul>
                    </div>

                    <div>
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-cogs me-1"></i>Configuration
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Tenant code should be unique and descriptive</li>
                            <li>Use uppercase letters and numbers only</li>
                            <li>Keep names concise but descriptive</li>
                            <li>Website URL is optional but helpful</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-generate tenant code from tenant name
        document.getElementById('TenantName').addEventListener('input', function() {
            const tenantName = this.value;
            const tenantCodeField = document.getElementById('TenantCode');
            
            if (tenantCodeField.value === '') {
                // Generate code from name: remove spaces, take first few letters, convert to uppercase
                const generatedCode = tenantName.replace(/\s+/g, '').substring(0, 8).toUpperCase();
                tenantCodeField.value = generatedCode;
            }
        });
        
        // Ensure tenant code is uppercase
        document.getElementById('TenantCode').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
}
