@model TechWayFit.Licensing.Management.Web.ViewModels.Tenant.TenantListViewModel
@{
    ViewData["Title"] = "Tenant Management";
    ViewData["Description"] = "Manage tenant organizations";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-management.css" />
}

<div class="container-fluid py-3">
    <!-- Header Section -->
    <div class="header mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Tenant Management</h2>
                <p class="text-muted mb-0">Manage tenant organizations and their configurations.</p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Create")" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add New Tenant
                </a>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Index", "User")" class="btn btn-outline-primary">
                        <i class="fas fa-users me-2"></i>View Users
                    </a>
                    <a href="@Url.Action("Index", "Role")" class="btn btn-outline-info">
                        <i class="fas fa-user-tag me-2"></i>View Roles
                    </a>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-secondary" onclick="window.location.reload()">
                        <i class="fas fa-sync-alt me-1"></i>Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-md bg-success-soft rounded">
                                <i class="fas fa-building text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="h4 mb-0">@Model.TotalTenants</div>
                            <div class="text-muted">Total Tenants</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-md bg-primary-soft rounded">
                                <i class="fas fa-check-circle text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="h4 mb-0">@Model.ActiveTenants</div>
                            <div class="text-muted">Active Tenants</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>Tenant Organizations
                </h5>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Tenants.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-3">Tenant</th>
                                <th class="border-0">Code</th>
                                <th class="border-0">Description</th>
                                <th class="border-0">Users</th>
                                <th class="border-0">Licenses</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Created</th>
                                <th class="border-0 text-end pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tenant in Model.Tenants)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm bg-success-soft rounded me-3">
                                                <i class="fas fa-building text-success"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@tenant.TenantName</div>
                                                @if (!string.IsNullOrEmpty(tenant.Website))
                                                {
                                                    <a href="@tenant.Website" target="_blank" class="small text-muted text-decoration-none">
                                                        <i class="fas fa-external-link-alt me-1"></i>@tenant.Website
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(tenant.TenantCode))
                                        {
                                            <span class="badge bg-light text-dark">@tenant.TenantCode</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">â€”</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@(tenant.Description ?? "No description")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary-soft text-primary">@tenant.UserCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info-soft text-info">@tenant.LicenseCount</span>
                                    </td>
                                    <td>
                                        @if (tenant.IsActive)
                                        {
                                            <span class="badge bg-success-soft text-success">
                                                <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-soft text-danger">
                                                <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@tenant.CreatedOn.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="d-flex gap-1 justify-content-end">
                                            <button type="button" class="btn btn-sm btn-outline-primary" title="View Tenant">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Edit Tenant">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Tenant">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar avatar-lg bg-light rounded-circle mx-auto mb-3">
                        <i class="fas fa-building text-muted"></i>
                    </div>
                    <h5 class="text-muted">No tenants found</h5>
                    <p class="text-muted mb-4">There are no tenant organizations configured in the system yet.</p>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Create First Tenant
                    </a>
                </div>
            }
        </div>
    </div>
</div>
