// ===================================================
// CARDS - Card components and variations
// ===================================================

.card {
    @include card-base;
    
    &:hover {
        @include card-hover;
    }
    
    // Card variants
    &.card-bordered {
        border: 2px solid $gray-200;
    }
    
    &.card-elevated {
        box-shadow: $shadow-md;
        
        &:hover {
            box-shadow: $shadow-lg;
        }
    }
    
    &.card-flat {
        box-shadow: none;
        border: 1px solid $gray-200;
    }
}

// Card header
.card-header {
    padding: $spacing-md $spacing-md $spacing-sm;
    border-bottom: 1px solid $bg-tertiary;
    background: $bg-secondary;
    border-radius: $radius-md $radius-md 0 0;
    
    h1, h2, h3, h4, h5, h6 {
        margin: 0;
        color: $text-primary;
    }
    
    .card-title {
        font-size: $font-size-lg;
        font-weight: $font-weight-semibold;
        margin: 0;
    }
    
    .card-subtitle {
        font-size: $font-size-sm;
        color: $text-secondary;
        margin: $spacing-xs 0 0;
    }
    
    // Header with actions
    &.card-header-actions {
        @include flex-between;
        
        .card-actions {
            display: flex;
            gap: $spacing-sm;
            align-items: center;
        }
    }
}

// Card body
.card-body {
    padding: $spacing-md;
    
    &.card-body-sm {
        padding: $spacing-sm;
    }
    
    &.card-body-lg {
        padding: $spacing-lg;
    }
    
    // Last child margin removal
    > *:last-child {
        margin-bottom: 0;
    }
}

// Card footer
.card-footer {
    padding: $spacing-sm $spacing-md $spacing-md;
    border-top: 1px solid $bg-tertiary;
    background: $bg-secondary;
    border-radius: 0 0 $radius-md $radius-md;
    
    &.card-footer-actions {
        @include flex-between;
        align-items: center;
    }
}

// Special card types
.card-profile {
    text-align: center;
    
    .card-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin: 0 auto $spacing-md;
        overflow: hidden;
        
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }
    
    .card-name {
        font-size: $font-size-xl;
        font-weight: $font-weight-semibold;
        margin-bottom: $spacing-xs;
    }
    
    .card-role {
        color: $text-secondary;
        font-size: $font-size-sm;
    }
}

.card-stat {
    text-align: center;
    
    .card-stat-number {
        font-size: $font-size-3xl;
        font-weight: $font-weight-bold;
        color: $primary;
        line-height: 1;
        margin-bottom: $spacing-xs;
    }
    
    .card-stat-label {
        font-size: $font-size-sm;
        color: $text-secondary;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
}

// Card grid layouts
.card-grid {
    display: grid;
    gap: $spacing-md;
    
    &.card-grid-2 {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
    
    &.card-grid-3 {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
    
    &.card-grid-4 {
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
}

// Responsive card adjustments
@include mobile-only {
    .card {
        margin-bottom: $spacing-md;
    }
    
    .card-header,
    .card-body,
    .card-footer {
        padding: $spacing-sm;
    }
    
    .card-grid {
        grid-template-columns: 1fr;
        gap: $spacing-sm;
    }
}

// Loading card
.card-loading {
    .card-header,
    .card-body {
        @include loading-skeleton;
        height: 20px;
        margin-bottom: $spacing-sm;
        border-radius: $radius-sm;
        
        &:last-child {
            margin-bottom: 0;
        }
    }
}

// Interactive cards
.card-interactive {
    cursor: pointer;
    transition: all $transition-normal;
    
    &:hover {
        transform: translateY(-4px);
        box-shadow: $shadow-lg;
    }
    
    &:active {
        transform: translateY(-2px);
    }
}

// Card with image
.card-image {
    .card-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: $radius-md $radius-md 0 0;
    }
    
    .card-img-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        padding: $spacing-md;
        background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.7));
        color: $white;
        border-radius: $radius-md $radius-md 0 0;
    }
}
