// ===================================================
// BOOTSTRAP COMPATIBILITY - Enhanced Bootstrap components
// ===================================================

// Card Enhancements
.card {
    background: $white;
    border: 1px solid $gray-200;
    border-radius: $radius-md;
    box-shadow: $shadow-sm;
    
    .card-header {
        background: $bg-primary;
        border-bottom: 1px solid $gray-200;
        padding: $spacing-md $spacing-lg;
        
        &.card-header-enhanced {
            background: linear-gradient(135deg, $primary 0%, lighten($primary, 5%) 100%);
            color: $white;
            border: none;
            
            h6 {
                color: $white;
                margin: 0;
                font-weight: $font-weight-semibold;
            }
            
            p {
                color: rgba(255, 255, 255, 0.9);
                margin: 0;
                font-size: $font-size-sm;
            }
        }
    }
    
    .card-body {
        padding: $spacing-lg;
        
        // Grid spacing enhancements
        .row.g-4 {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 1.5rem;
        }
        
        .col-md-6,
        .col-12 {
            margin-bottom: $spacing-md;
            
            &:last-child {
                margin-bottom: 0;
            }
        }
        
        // Info sections with backgrounds
        .info-section {
            background: $bg-secondary;
            padding: $spacing-md;
            border-radius: $radius-sm;
            margin-bottom: $spacing-md;
            border-left: 3px solid $primary;
            
            &:first-child {
                margin-top: 0;
            }
            
            &:last-child {
                margin-bottom: 0;
            }
            
            &:not(:last-child) {
                margin-bottom: $spacing-md;
            }
            
            h6 {
                color: $text-primary;
                margin-bottom: $spacing-xs;
                font-weight: $font-weight-semibold;
            }
            
            p {
                color: $text-secondary;
                margin: 0;
                line-height: 1.6;
            }
            
            .small {
                font-size: $font-size-sm;
            }
        }
    }
    
    .card-footer {
        background: $bg-secondary;
        border-top: 1px solid $gray-200;
        padding: $spacing-md $spacing-lg;
    }
}

// Grid system overrides removed - using Bootstrap's native grid system
// This ensures proper functionality across all pages including License Create
